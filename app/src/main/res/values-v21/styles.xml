<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ripple_background">
        <!--<item name="android:background">?attr/selectableItemBackgroundBorderless</item>-->
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="CamActivityTheme" parent="AppTheme" />

    <!--普通样式-->
    <style name="SwitchButtonNormal">
        <item name="kswThumbDrawable">@drawable/switch_btn_thumb_selector</item>
        <item name="kswBackDrawable">@drawable/switch_btn_back_drawable</item>
        <item name="kswBackColor">@color/ksw_md_back_color</item>
        <item name="kswBackMeasureRatio">2.05</item>
        <item name="kswThumbMarginLeft">-6dp</item>
        <item name="kswThumbMarginTop">-4dp</item>
        <item name="kswThumbMarginRight">-6dp</item>
        <item name="kswThumbMarginBottom">-4dp</item>
    </style>

    <style name="SwitchButtonStyleMD" parent="SwitchButtonNormal">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <!--L click style-->
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>
</resources>
