<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/color_4b9fd5</item>
        <item name="colorControlNormal">@color/color_4b9fd5</item>
        <item name="colorControlActivated">@color/color_4b9fd5</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
    </style>


    <style name="comment_bottom_dialog_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/title_magin</item>
        <item name="android:layout_marginRight">@dimen/title_magin</item>
    </style>

    <style name="activity_top_in" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_up_in</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@anim/stay</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_down_out</item>
        <item name="android:windowBackground">@color/half_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--单行内容居中的文本样式-->
    <style name="text_base_singleLine">
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--第三方登陆-->
    <style name="third_party_login_style" parent="text_base_singleLine">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/color_7c7c7c</item>
        <item name="android:drawablePadding">9dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--登陆模块输入框-->
    <style name="login_model_common_edittext_style" parent="text_base_singleLine">
        <item name="android:textCursorDrawable">@drawable/bg_common_cursor</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:textColorHint">@color/color_cecece</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--登陆模块的确认按钮-->
    <style name="login_model_commit_style" parent="text_base_singleLine">
        <item name="android:background">@drawable/btn_common_login_commit_selector</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/common_btn_color_state</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!--清空输入框-->
    <style name="clear_edittext_style">
        <item name="android:visibility">gone</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_login_clear_text</item>
    </style>

    <!--显示密码-->
    <style name="show_pwd_style">
        <item name="android:padding">5dp</item>
        <item name="android:checked">false</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/icon_common_show_pwd_selector</item>
    </style>

    <!--主页底部按钮状态-->
    <style name="home_bottom_radio_style">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/home_bottom_menu_text_color_selector</item>
    </style>


    <declare-styleable name="ShadowLayout">
        <attr name="sl_cornerRadius" format="dimension" />
        <attr name="sl_shadowRadius" format="dimension" />
        <attr name="sl_shadowColor" format="color" />
        <attr name="sl_dx" format="dimension" />
        <attr name="sl_dy" format="dimension" />
    </declare-styleable>


    <declare-styleable name="LoginButton">
        <attr name="lb_stroke_color" format="color" />
    </declare-styleable>

    <style name="BlurDialogFragment.Default.Animation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_in_down</item>
        <item name="android:windowExitAnimation">@anim/alpha_out</item>
    </style>

    <style name="l_style_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ripple_background">
        <item name="android:background">@null</item>
    </style>

    <style name="ripple_background_borderless">
        <!--<item name="android:background">?attr/selectableItemBackgroundBorderless</item>-->
        <item name="android:background">@null</item>
    </style>

    <style name="CamActivityTheme" parent="AppTheme" />
    <!-- 设备信息item样式 -->
    <style name="information_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>


    <!--普通样式-->
    <style name="SwitchButtonNormal">
        <item name="kswThumbDrawable">@drawable/switch_btn_thumb_selector</item>
        <item name="kswBackDrawable">@drawable/switch_btn_back_drawable</item>
        <item name="kswBackColor">@color/ksw_md_back_color</item>
        <item name="kswBackMeasureRatio">2.05</item>
        <item name="kswThumbMarginLeft">-6dp</item>
        <item name="kswThumbMarginTop">-4dp</item>
        <item name="kswThumbMarginRight">-6dp</item>
        <item name="kswThumbMarginBottom">-4dp</item>
    </style>

    <style name="SwitchButtonStyleMD" parent="SwitchButtonNormal">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="MediaActivityTransition" parent="AppTheme" />
</resources>