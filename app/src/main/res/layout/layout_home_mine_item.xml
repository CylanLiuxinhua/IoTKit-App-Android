<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ripple_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_home_mine_item_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/y16"
        android:layout_marginLeft="@dimen/x15"
        android:drawableLeft="@drawable/me_icon_friend"
        android:drawablePadding="@dimen/x16"
        android:gravity="center_vertical"
        android:textColor="#333333"
        android:textSize="@dimen/sp15" />

    <ImageView
        android:id="@+id/iv_home_mine_item_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x19"
        android:src="@drawable/me_icon_friend" />

    <com.cylan.jiafeigou.widget.NumberBadge
        android:id="@+id/number_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/x10"
        android:layout_marginTop="40dp"
        android:layout_toStartOf="@+id/iv_home_mine_item_friend"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp10"
        app:bg_color="@color/color_red"
        app:point_radius="@dimen/x4" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_alignParentBottom="true"
        android:background="@color/color_f2f2f2" />


</RelativeLayout>