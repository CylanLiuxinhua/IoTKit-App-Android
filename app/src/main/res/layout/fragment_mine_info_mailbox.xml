<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:clickable="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fLayout_top_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_0ba8cf">

        <TextView
            android:drawableLeft="@drawable/nav_tab_back_selector"
            android:id="@+id/tv_top_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y48"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/x15"
            android:paddingLeft="@dimen/x15"
            android:text="@string/Tap0_BindEmail"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp18" />

        <ImageView
            android:id="@+id/iv_mine_personal_mailbox_bind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:clickable="true"
            android:padding="@dimen/x15"
            android:src="@drawable/me_icon_finish_normal"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_mine_personal_mailbox_bind_disable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:clickable="true"
            android:padding="@dimen/x15"
            android:src="@drawable/icon_finish_disable"
            android:visibility="gone" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="@dimen/y8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_input_container"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_mine_personal_information_mailbox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/y48"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x1"
                    android:hint="@string/EMAIL_1"
                    android:background="@null"
                    android:maxLength="65"
                    android:singleLine="true"
                    android:inputType="textVisiblePassword"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp16" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_mine_personal_information_mailbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/x20"
                    android:paddingBottom="@dimen/x10"
                    android:paddingTop="@dimen/x10"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_clear_text"
                     />
            </LinearLayout>

            <View
                android:layout_below="@id/ll_input_container"
                android:id="@+id/view_mine_personal_information_mailbox"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:background="@color/color_f2f2f2" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y10"
            android:background="@drawable/little_shape" />
    </FrameLayout>

</LinearLayout>

