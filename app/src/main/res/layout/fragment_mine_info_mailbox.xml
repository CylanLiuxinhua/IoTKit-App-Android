<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:hunt="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white"
    android:clickable="true"
    android:orientation="vertical">

    <com.cylan.jiafeigou.widget.CustomToolbar
        layout="@layout/layout_default_custom_tool_bar"
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        hunt:ct_background_color="@color/color_0ba8cf"
        hunt:ct_enable_shadow="false"
        hunt:ct_fit_system_window="true"
        hunt:ct_icon="@drawable/nav_icon_back_white"
        hunt:ct_icon_right="@drawable/me_icon_finish_normal"
        hunt:ct_left_title="@string/Tap0_BindEmail"
        hunt:ct_left_title_color="@color/color_white" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="@dimen/y8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_input_container"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_mine_personal_information_mailbox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/y48"
                    android:layout_marginStart="@dimen/x20"
                    android:layout_marginEnd="@dimen/x1"
                    android:hint="@string/EMAIL_1"
                    android:background="@null"
                    android:maxLength="65"
                    android:singleLine="true"
                    android:cursorVisible="true"
                    android:textCursorDrawable="@drawable/edittext_cursor_shape"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp16" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_mine_personal_information_mailbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/x20"
                    android:paddingBottom="@dimen/x10"
                    android:paddingTop="@dimen/x10"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_clear_text" />
            </LinearLayout>

            <View
                android:layout_below="@id/ll_input_container"
                android:id="@+id/view_mine_personal_information_mailbox"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:background="@color/color_f2f2f2" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y10"
            android:background="@drawable/little_shape" />
    </FrameLayout>

</LinearLayout>

