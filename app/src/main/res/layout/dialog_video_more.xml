<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/color_white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_media_video_delete"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:drawableLeft="@drawable/icon_wonderful_view_picture_delete"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="删除"/>


        <TextView
            android:id="@+id/dialog_media_video_download"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:drawableLeft="@drawable/icon_wonderful_view_picture_down"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="下载"/>

        <TextView
            android:id="@+id/dialog_media_video_share"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:drawableLeft="@drawable/icon_wonderful_view_picture_share"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="分享"/>
    </LinearLayout>
</android.support.v7.widget.CardView>