<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.cylan.jiafeigou.widget.CustomToolbar
        android:id="@+id/custom_toolbar"
        layout="@layout/layout_default_custom_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ct_enable_theme="true"
        app:ct_icon="@drawable/nav_tab_back_selector"
        app:ct_icon_right="@drawable/icon_finish_selector"
        app:ct_left_title="@string/MESSAGES_IDENTIFY_CREATE_BTN"
        app:ct_left_title_color="@color/color_white" />

    <com.cylan.jiafeigou.support.photoselect.CircleImageView
        android:id="@+id/picture"
        android:layout_width="@dimen/y120"
        android:layout_height="@dimen/y120"
        android:layout_marginTop="@dimen/y48"
        android:src="@mipmap/ic_launcher" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/y20"
        android:layout_marginStart="@dimen/y20"
        android:layout_marginTop="@dimen/y40"
        android:gravity="center"
        android:hint="@string/LOCATION_NAME_ERROR"
        android:textColor="@color/color_666666" />
</LinearLayout>
