<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:clickable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_0ba8cf">

        <RelativeLayout
            android:id="@+id/header_delay_record_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="@dimen/x15">

            <ImageView
                android:id="@+id/header_delay_record_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nav_tab_back_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="SourceHanSansCN"
                android:text="@string/Tap2_Timelapse_title"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp18" />
        </RelativeLayout>
    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y94"
        android:src="@drawable/pic_none" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:gravity="center"
        android:text="@string/Tap1_Camera_Greetings"
        android:textColor="#AAAAAA"
        android:textSize="@dimen/sp15" />

    <Button
        android:id="@+id/fragment_delay_record_start_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y88"
        android:background="@drawable/btn_setting_photography_again_normal"
        android:text="立即开启"
        android:textColor="@color/delay_record_start_now_color"
        android:textSize="@dimen/sp17" />
</LinearLayout>