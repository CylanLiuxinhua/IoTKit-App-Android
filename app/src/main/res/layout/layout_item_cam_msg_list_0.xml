<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hunt="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="@color/color_white"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <com.cylan.jiafeigou.widget.FateLineView
        android:id="@+id/fl_wonderful_item_time_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        hunt:dashLineColor="@color/color_e8e8e8"
        hunt:dashLineWidth="2dp"
        hunt:innerCircleColor="@color/color_e8e8e8"
        hunt:innerCircleRadius="6dp"
        hunt:outerCircleStrokeWidth="4dp"
        hunt:outerCircleColor="@color/color_white"
        hunt:outerCircleRadius="10dp"
        hunt:outerCircleY="10dp" />

    <FrameLayout
        android:id="@+id/rLayout_cam_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_cam_message_item_date"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:gravity="center"
            android:text="Hi~"
            android:textColor="@color/color_666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_cam_message_list_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/color_e8e8e8" />
    </FrameLayout>
</LinearLayout>