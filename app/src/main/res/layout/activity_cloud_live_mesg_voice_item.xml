<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_time"
        android:text="11/20 23:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="9dp"
        android:layout_below="@id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/iv_user_icon"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_mine_head_normal"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_marginRight="7dp"
            android:id="@+id/ll_voice_container"
            android:layout_toLeftOf="@id/iv_user_icon"
            android:background="@drawable/pic_container_blue"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="38dp">

            <TextView
                android:id="@+id/tv_voice_length"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:text="15''"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/ll_voice_container"
            android:layout_centerVertical="true"
            android:text="已读"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>