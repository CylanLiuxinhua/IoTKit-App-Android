<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/frame_layout_album_select"
    android:paddingTop="@dimen/y1"
    android:paddingRight="@dimen/x1"
    android:paddingBottom="@dimen/y1"
    android:paddingLeft="@dimen/x1">

    <ImageView
        android:id="@+id/image_view_album_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/text_view_album_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#99FFFFFF"
        android:textColor="#212121"
        android:textSize="@dimen/sp20"
        android:lines="1"
        android:gravity="center"/>

</FrameLayout>