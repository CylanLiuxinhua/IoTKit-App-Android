<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_result_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/pic"
        android:layout_width="fill_parent"
        android:layout_height="232dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/phone_magin_left"
            android:layout_marginTop="@dimen/phone_top"
            android:src="@drawable/ico_addvideo_phone" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="32dp">

                <ImageView
                    android:id="@+id/pd_connecting"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:src="@anim/binding"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/connecting_state"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/ceter_magin_top"
                    android:src="@drawable/addvideo_connecting" />
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/ico_addvideo_device"
            android:layout_width="wrap_content"
            android:layout_height="117.5dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="@dimen/phone_magin_left"
            android:src="@drawable/ico_addvideo_cam" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_connecting_state"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pic"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:text="@string/PLEASE_WAIT_2"
        android:textColor="#333333"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_connecting_state"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_addvideo_selector"
        android:text="@string/SAVE"
        android:textColor="@color/add_video_color"
        android:textSize="@dimen/login_btn_textsize"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18sp"
        android:text="@string/DEVICES_TIPS_TEXT"
        android:textColor="#c5c5c5"
        android:textSize="14sp" />

</RelativeLayout>