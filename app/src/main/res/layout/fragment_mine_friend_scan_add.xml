<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hunt="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/color_white"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".n.view.mine.MineFriendScanAddFragment">

    <RelativeLayout
        android:id="@+id/rl_home_mine_relativesandfriends_scan_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y73"
        android:background="#0BA8CF">

        <ImageView
            android:id="@+id/iv_home_mine_relativesandfriends_scan_add_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/x15"
            android:clickable="true"
            android:src="@drawable/icon_nav_back_white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y12"
            android:layout_marginLeft="@dimen/x48"
            android:text="@string/Tap3_FriendsAdd_QR"
            android:textColor="@color/color_white"
            android:textSize="18sp" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.cylan.jiafeigou.support.zscan.ZXingScannerView
            android:layout_marginTop="@dimen/y30"
            android:layout_gravity="center"
            android:id="@+id/zxV_scan_add_relativesandfriend"
            android:layout_width="@dimen/x350"
            android:layout_height="@dimen/y350"
            hunt:hint=""
            />

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_send_pro_hint"
            android:layout_marginTop="@dimen/y120"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ProgressBar
                android:layout_centerHorizontal="true"
                android:id="@+id/pro_send_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/color_black"
                android:text="loading..."
                android:layout_below="@id/pro_send_hint"
                android:id="@+id/tv_send_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y10"
            android:background="@drawable/little_shape" />
    </FrameLayout>

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y20"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        android:text="@string/Tap3_FriendsAdd_QR_Tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y50"
        android:id="@+id/iv_erweima"
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/y150" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:text="@string/Tap3_MyQRCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>