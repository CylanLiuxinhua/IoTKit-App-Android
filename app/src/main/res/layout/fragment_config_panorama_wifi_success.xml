<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/panorama_mode_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y168"
        android:src="@drawable/pic_ap_finish" />

    <TextView
        android:id="@+id/panorama_mode_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/panorama_mode_picture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y28"
        android:text="@string/Tap1_OutdoorMode_Opened"
        android:textColor="#888888"
        android:textSize="@dimen/sp17" />

    <com.cylan.jiafeigou.widget.LoginButton
        android:id="@+id/panorama_mode_done"
        android:layout_width="@dimen/x173"
        android:layout_height="@dimen/y50"
        android:layout_below="@+id/panorama_mode_desc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y81"
        android:enabled="true"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/FINISHED"
        android:textColor="@color/common_btn_color_state"
        android:textSize="@dimen/sp17"
        app:lb_stroke_color="@color/color_d8d8d8" />
</RelativeLayout>