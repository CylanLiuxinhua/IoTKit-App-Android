<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hunt="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rLayout_device_item"
    style="@style/ripple_background"
    android:layout_width="match_parent"
    android:layout_height="77dp"
    android:clickable="true">


    <com.cylan.jiafeigou.widget.ImageViewTip
        android:id="@+id/img_device_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="19dp"
        android:background="@drawable/icon_home_camera_online"
        hunt:t_radius="4dp"
        hunt:t_borderColor="@color/color_white"
        hunt:t_borderWidth="1dp"
        hunt:t_enableBorder="true"
        hunt:t_ignore="true"
        hunt:t_showDot="true" />

    <View
        android:id="@+id/v_icon_base_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/tv_device_alias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/v_icon_base_line_bottom"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/img_device_icon"
        android:ellipsize="end"
        android:lines="1"
        android:maxLength="8"
        android:maxLines="1"
        android:textColor="@color/color_333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_device_msg_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_icon_base_line_bottom"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/img_device_icon"
        android:ellipsize="end"
        android:lines="1"
        android:maxLength="8"
        android:maxLines="1"
        android:text="[20]ffafafafaf"
        android:textColor="@color/color_777777"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_device_msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/v_icon_base_line_bottom"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/color_adadad"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/v_stander"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_device_net_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/icon_home_net_2g" />

        <ImageView
            android:id="@+id/img_device_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"

            android:background="@drawable/icon_home_net_2g" />

        <ImageView
            android:id="@+id/img_device_protection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/icon_home_net_wifi" />
    </LinearLayout>

    <View
        android:id="@+id/v_stander"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_device_msg_count" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/tv_device_msg_count"
        android:layout_alignParentBottom="true"
        android:background="@color/color_e8e8e8" />
</RelativeLayout>