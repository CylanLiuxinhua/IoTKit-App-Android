<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rLayout_device_item"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#999eee">


    <ImageView
        android:id="@+id/img_device_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/add_circle" />

    <View
        android:id="@+id/v_icon_base_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_device_icon" />

    <TextView
        android:id="@+id/tv_device_alias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/img_device_icon"
        android:text="test" />

    <TextView
        android:id="@+id/tv_device_msg_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/v_icon_base_line_bottom"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/img_device_icon"
        android:text="[25]有新的发现" />

    <TextView
        android:id="@+id/tv_device_msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:text="19:20" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/v_icon_base_line_bottom"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_device_net_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/bg_red_dot" />

        <ImageView
            android:id="@+id/img_device_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/bg_red_dot" />

        <ImageView
            android:id="@+id/img_device_protection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/bg_red_dot" />
    </LinearLayout>

</RelativeLayout>