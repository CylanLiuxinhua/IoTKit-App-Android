<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="67dp">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_share_device_icon"
            android:src="@drawable/icon_home_album_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/iv_share_device_icon"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            >
            <TextView
                android:id="@+id/tv_share_device_name"
                android:textSize="16sp"
                android:textColor="@color/color_333333"
                android:text="云相框"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingTop="8dp"
                android:layout_below="@id/tv_share_device_name"
                android:textSize="12sp"
                android:textColor="@color/color_8c8c8c"
                android:text="5/5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_marginLeft="48dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_f2f2f2"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/tv_share_device_btn"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_screenshot"
            android:text="分享"
            android:textSize="13sp"
            android:textColor="@color/color_4b9fd5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>