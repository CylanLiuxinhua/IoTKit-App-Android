<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hunt="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lLayout_forget_pwd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:clickable="true"
    android:orientation="vertical">

    <Space
        android:layout_width="@dimen/x1"
        android:layout_height="@dimen/y60" />

    <com.cylan.jiafeigou.widget.CustomToolbar
        android:id="@+id/rLayout_forget_pwd_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        hunt:ct_icon="@drawable/login_btn_close"
        hunt:ct_title="@string/FORGOT_PWD" />

    <ViewSwitcher
        android:id="@+id/vs_set_account_pwd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x19"
        android:layout_marginRight="@dimen/x19"
        android:inAnimation="@anim/slide_in_right_overshoot"
        android:outAnimation="@anim/slide_out_left">

        <FrameLayout
            android:id="@+id/fLayout_forget_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/lLayout_register_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y44"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/fLayout_account_input_box"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y48"
                    android:layout_marginTop="@dimen/y30">


                    <EditText
                        android:id="@+id/et_forget_username"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/y5"
                        android:layout_marginTop="@dimen/y5"
                        android:background="@null"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:hint="请输入手机号/邮箱"
                        android:maxLength="65"
                        android:textColor="@color/color_666666"
                        android:textColorHint="@color/color_cecece"
                        android:textCursorDrawable="@drawable/bg_common_cursor"
                        android:textSize="@dimen/sp15" />

                    <ImageView
                        android:id="@+id/iv_forget_clear_username"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:src="@drawable/icon_clear_text"
                        android:visibility="gone" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y1"
                        android:layout_gravity="bottom"
                        android:background="@color/color_f2f2f2" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fLayout_verification_code_input_box"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y48"
                    android:layout_marginTop="@dimen/y30"
                    android:visibility="gone">


                    <EditText
                        android:id="@+id/et_verification_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/y5"
                        android:layout_marginTop="@dimen/y5"
                        android:background="@null"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:hint="@string/ENTER_CODE"
                        android:inputType="numberDecimal"
                        android:maxLength="6"
                        android:paddingLeft="@dimen/x40"
                        android:paddingRight="@dimen/x40"
                        android:textColor="@color/color_666666"
                        android:textColorHint="@color/color_cecece"
                        android:textCursorDrawable="@drawable/bg_common_cursor"
                        android:textSize="@dimen/sp15" />


                    <TextView
                        android:id="@+id/tv_meter_get_code"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:enabled="false"
                        android:gravity="center"
                        android:paddingLeft="@dimen/x10"
                        android:paddingRight="@dimen/x10"
                        android:textColor="@color/common_btn_color_state" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y1"
                        android:layout_gravity="bottom"
                        android:background="@color/color_f2f2f2" />
                </FrameLayout>


                <TextView
                    android:id="@+id/tv_forget_pwd_submit"
                    style="@style/login_model_commit_style"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/y37"
                    android:text="@string/CARRY_ON" />
            </LinearLayout>
        </FrameLayout>

        <include
            android:id="@+id/layout_to_be_update"
            layout="@layout/fragment_set_new_pwd" />
    </ViewSwitcher>

</LinearLayout>