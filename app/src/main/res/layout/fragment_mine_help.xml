<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hunt="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:clickable="true"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rLayout_mine_help_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y73"
        android:background="#0BA8CF">

        <ImageView
            android:id="@+id/iv_home_mine_help_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:padding="@dimen/x15"
            android:src="@drawable/icon_nav_back_white" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y12"
            android:layout_marginLeft="@dimen/x48"
            android:text="@string/Tap3_Feedback"
            android:textColor="@color/color_white"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tv_mine_help_suggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:padding="@dimen/x15"
            android:text="@string/FEEDBACK"
            android:textColor="@color/color_white"
            android:textSize="14sp" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pb_mine_help"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="200"
        android:progress="30"
        android:progressDrawable="@drawable/progressbar"
        android:text="热门问题"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.cylan.jiafeigou.widget.HomeMineItemView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y48"
            android:clickable="true"
            hunt:rightDrawable="@drawable/icon_mine_arrow_next"
            hunt:text="设备离线，或连接中"
            hunt:textColor="@color/color_333333"
            hunt:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y10"
            android:background="@drawable/little_shape" />

    </FrameLayout>

    <com.cylan.jiafeigou.widget.HomeMineItemView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y48"
        android:clickable="true"
        hunt:rightDrawable="@drawable/icon_mine_arrow_next"
        hunt:text="添加设备，提示“找不到设备”"
        hunt:textColor="@color/color_333333"
        hunt:textSize="16sp" />

    <com.cylan.jiafeigou.widget.HomeMineItemView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y48"
        android:clickable="true"
        hunt:rightDrawable="@drawable/icon_mine_arrow_next"
        hunt:text="Android系统：连接设备的WiFi和密码是什么"
        hunt:textColor="@color/color_333333"
        hunt:textSize="16sp" />

    <com.cylan.jiafeigou.widget.HomeMineItemView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y48"
        android:clickable="true"
        hunt:rightDrawable="@drawable/icon_mine_arrow_next"
        hunt:text="一个设备可以在多个客户端上使用吗"
        hunt:textColor="@color/color_333333"
        hunt:textSize="16sp" />

    <com.cylan.jiafeigou.widget.HomeMineItemView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y48"
        android:clickable="true"
        hunt:rightDrawable="@drawable/icon_mine_arrow_next"
        hunt:text="查看直播，宽带最低需要多少"
        hunt:textColor="@color/color_333333"
        hunt:textSize="16sp" />



    <WebView
        android:id="@+id/wv_mine_help"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
    </WebView>


</LinearLayout>