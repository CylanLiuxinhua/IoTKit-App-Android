<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/rl_share_smartcamera"
android:layout_marginLeft="15dp"
android:layout_width="match_parent"
android:layout_height="67dp">

<ImageView
    android:layout_centerVertical="true"
    android:id="@+id/iv_device_icon"
    android:src="@drawable/icon_home_camera_online"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<RelativeLayout
    android:gravity="center_vertical"
    android:layout_toRightOf="@id/iv_device_icon"
    android:paddingLeft="15dp"
    android:layout_width="match_parent"
    android:layout_height="67dp"
    >
    <TextView
        android:id="@+id/tv_device_name"
        android:textSize="16sp"
        android:textColor="@color/color_333333"
        android:text="智能摄像头"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingTop="8dp"
        android:layout_below="@id/tv_device_name"
        android:textSize="12sp"
        android:textColor="@color/color_8c8c8c"
        android:text="3/5"
        android:id="@+id/tv_share_device_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
<View
    android:layout_marginLeft="48dp"
    android:layout_alignParentBottom="true"
    android:background="@color/color_f2f2f2"
    android:layout_width="match_parent"
    android:layout_height="1dp"/>

<ImageView
    android:id="@+id/iv_share_isCheck"
    android:layout_marginRight="15dp"
    android:gravity="center"
    android:src="@drawable/icon_selected"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

</RelativeLayout>