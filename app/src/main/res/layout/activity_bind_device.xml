<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hunt="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f4f4f4"
    tools:context="com.cylan.jiafeigou.n.view.activity.BindDeviceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fLayout_top_bar_container"
                android:background="@color/color_0ba8cf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgV_top_bar_left"
                        style="@style/ripple_background_borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/x15"
                        android:src="@drawable/nav_icon_close_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/imgV_top_bar_left"
                        android:id="@+id/imgV_top_bar_center"
                        android:layout_centerVertical="true"
                        android:text="@string/DEVICES_TITLE"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp16" />
                </RelativeLayout>

            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y10"
                android:background="@drawable/little_shape" />
        </LinearLayout>

        <com.cylan.jiafeigou.widget.HomeMineItemView
            android:id="@+id/v_to_scan_qrcode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y67"
            android:background="@color/color_white"
            hunt:leftDrawable="@drawable/icon_scan_code"
            hunt:rightDrawable="@drawable/icon_mine_arrow_next"
            hunt:text="@string/Tap3_FriendsAdd_QR"
            hunt:textColor="@color/color_383838"
            hunt:textSize="@dimen/sp16" />

        <com.cylan.jiafeigou.widget.HomeMineItemView
            android:id="@+id/v_to_bind_camera"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y67"
            android:layout_marginTop="@dimen/y25"
            android:background="@color/color_white"
            hunt:leftDrawable="@drawable/icon_home_camera_online"
            hunt:rightDrawable="@drawable/icon_mine_arrow_next"
            hunt:text="智能摄像头"
            hunt:textColor="@color/color_383838"
            hunt:textSize="@dimen/sp16" />

        <com.cylan.jiafeigou.widget.HomeMineItemView
            android:id="@+id/v_to_bind_doorbell"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y67"
            android:background="@color/color_white"
            hunt:leftDrawable="@drawable/icon_home_doorbell_online"
            hunt:rightDrawable="@drawable/icon_mine_arrow_next"
            hunt:text="@string/CALL_CAMERA_NAME"
            hunt:textColor="@color/color_383838"
            hunt:textSize="@dimen/sp16" />

        <!--<com.cylan.jiafeigou.widget.HomeMineItemView-->
            <!--android:id="@+id/v_to_bind_cloud_album"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/y67"-->
            <!--android:background="@color/color_white"-->
            <!--hunt:leftDrawable="@drawable/icon_home_album_online"-->
            <!--hunt:rightDrawable="@drawable/icon_mine_arrow_next"-->
            <!--hunt:text="云相框"-->
            <!--hunt:textColor="@color/color_383838"-->
            <!--hunt:textSize="@dimen/sp16" />-->
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fLayout_bind_device_fragment_container_id"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>
