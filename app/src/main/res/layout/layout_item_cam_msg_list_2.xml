<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hunt="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="225dp"
    android:background="@color/color_white"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <com.cylan.jiafeigou.widget.FateLineView
        android:id="@+id/fl_wonderful_item_time_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        hunt:dashLineColor="@color/color_e8e8e8"
        hunt:dashLineWidth="2dp"
        hunt:innerCircleColor="@color/color_e8e8e8"
        hunt:innerCircleRadius="6dp"
        hunt:outerCircleStrokeWidth="4dp"
        hunt:outerCircleColor="@color/color_white"
        hunt:outerCircleRadius="10dp"
        hunt:outerCircleY="10dp" />

    <RelativeLayout
        android:id="@+id/rLayout_cam_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_cam_message_item_date"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:gravity="center"
            android:text="Hi~"
            android:textColor="@color/color_666666"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/fLayout_cam_message_item_bottom"
            android:layout_below="@+id/tv_cam_message_item_date"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgV_cam_message_pic_0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher" />

            <Space
                android:layout_width="5dp"
                android:layout_height="1dp" />

            <ImageView
                android:id="@+id/imgV_cam_message_pic_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher" />
        </LinearLayout>


        <FrameLayout
            android:id="@+id/fLayout_cam_message_item_bottom"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom">


            <TextView
                android:id="@+id/tv_cam_message_item_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="删除"
                android:textColor="@color/color_4b9fd5"
                android:textSize="11sp" />


            <TextView
                android:id="@+id/tv_to_live"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end|center_vertical"
                android:drawableLeft="@drawable/btn_to_live_selector"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="查看视频"
                android:textColor="@color/color_909090"
                android:textSize="11sp" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/color_e8e8e8" />
    </RelativeLayout>
</LinearLayout>