<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lLayout_dialog_share_wonderful"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    tools:context="com.cylan.jiafeigou.n.view.bind.BindDeviceListFragment">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:clickable="true"
            android:id="@+id/tv_share_to_timeline"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableLeft="@drawable/icon_share_to_friend"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="朋友圈" />

        <TextView
            android:clickable="true"
            android:id="@+id/tv_share_to_wechat_friends"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableLeft="@drawable/icon_share_to_wechat"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="微信" />
    </LinearLayout>
</android.support.v7.widget.CardView>
