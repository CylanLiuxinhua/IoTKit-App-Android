<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/chat_item_time"
        android:textColor="#adadad"
        android:textSize="13sp"
        android:layout_centerHorizontal="true"
        android:text="2016/04/01 12:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_mine_suggestion_server"
        android:layout_marginTop="@dimen/y22"
        android:layout_marginLeft="@dimen/x10"
        android:src="@drawable/pic_head"
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/y40" />

    <TextView
        android:background="@drawable/pic_container_white"
        android:textColor="#333333"
        android:textSize="14sp"
        android:id="@+id/chat_item_msg"
        android:paddingLeft="@dimen/x15"
        android:paddingRight="@dimen/x12"
        android:paddingBottom="@dimen/y10"
        android:paddingTop="@dimen/y10"
        android:text="亲爱的用户,客户端将进行系统维护升级,期间对设备正常使用将会造成一定影响，对您造成的不便之处敬请谅解。再次感谢您对加菲狗的支持！"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginTop="@dimen/y30"
        android:layout_toRightOf="@id/iv_mine_suggestion_server"
        android:layout_width="@dimen/x230"
        android:layout_height="wrap_content" />

</RelativeLayout>