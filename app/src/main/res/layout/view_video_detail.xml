<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.cylan.jiafeigou.widget.ShadowFrameLayout
        android:id="@+id/act_media_video_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:fixSize="true">

        <SurfaceView
            android:id="@+id/view_media_video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/view_video_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <com.cylan.jiafeigou.widget.SimpleProgressBar
            android:id="@+id/view_media_video_loading_bar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:visibility="invisible"
            app:progress_point_radius="3dp"
            app:progress_stroke_color="#CECECE"/>
    </com.cylan.jiafeigou.widget.ShadowFrameLayout>
</FrameLayout>
