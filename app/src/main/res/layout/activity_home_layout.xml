<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_pic_relativelayout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y374">

        <ImageView
            android:id="@+id/top_pic_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:focusable="true"
            android:nextFocusDown="@+id/video_list"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="72dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_top_shadow_top" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@drawable/bg_top_shadow_top">

            <TextView
                android:id="@+id/top_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:drawableLeft="@drawable/btn_menu_selector"
                android:drawablePadding="13dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingBottom="13dp"
                android:paddingLeft="15dp"
                android:paddingRight="13dp"
                android:paddingTop="13dp"
                android:singleLine="true"
                android:text="@string/MY_HOME"
                android:textColor="@color/bottom_text_default"
                android:textSize="@dimen/timeline_no_pic" />

            <ImageView
                android:id="@+id/top_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:focusable="true"
                android:nextFocusDown="@+id/top_pic_layout"
                android:paddingBottom="13dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="13dp"
                android:scaleType="center"
                android:src="@drawable/btn_message_selector" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/top_msg_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ico_msg_remind"
            android:visibility="gone" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/bg_top_shadow_bottom" />

        <TextView
            android:id="@+id/top_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="15dp"
            android:drawablePadding="13dp"
            android:textColor="@color/bottom_text_default"
            android:textSize="@dimen/login_forget_size" />

        <TextView
            android:id="@+id/top_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="12dp"
            android:textColor="@color/bottom_text_default"
            android:textSize="@dimen/login_forget_size" />


    </RelativeLayout>


    <TextView
        android:id="@+id/notify_text"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@id/top_pic_relativelayout"
        android:background="@drawable/video_net_erorr_bg"
        android:drawableLeft="@drawable/ico_warning_symbol"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:textColor="#4f4f4f"
        android:textSize="14sp"
        android:visibility="gone" />


    <com.cylan.jiafeigou.widget.RefreshListView
        android:id="@+id/video_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/notify_text"
        android:background="@color/white"
        android:dividerHeight="0.2dp"
        android:focusable="true"
        android:nextFocusDown="@+id/layout_adddevice"
        android:nextFocusRight="@+id/layout_adddevice"
        android:nextFocusUp="@+id/top_msg"
        android:scrollbars="none" />

    <TextView
        android:id="@+id/no_video_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/notify_text"
        android:layout_centerHorizontal="true"
        android:paddingTop="110dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:text="@string/ADD_EQUIPMENT"
        android:textColor="#909090"
        android:textSize="@dimen/area_code_size"
        android:visibility="gone" />


    <com.cylan.jiafeigou.widget.AddDeviceLayout
        android:id="@+id/layout_adddevice"
        android:layout_width="91dp"
        android:layout_height="91dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="center" />
</RelativeLayout>