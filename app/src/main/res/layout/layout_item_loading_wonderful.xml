<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hunt="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lLayout_item_wonderful"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:orientation="horizontal">

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/color_e8e8e8" />-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <com.cylan.jiafeigou.widget.SimpleProgressBar
            android:id="@+id/v_simple_38line"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            hunt:progress_stroke_color="@color/color_4b9fd5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="加载中..."
            android:textSize="11sp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/color_e8e8e8" />
</FrameLayout>
