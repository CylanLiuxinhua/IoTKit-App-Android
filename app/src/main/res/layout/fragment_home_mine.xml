<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tim="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rLayout_home_mine_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y374"
        android:background="#888888">

        <TextView
            android:id="@+id/tv_home_mine_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableTop="@drawable/ico_addvideo_cam"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:text="用户昵称" />
    </RelativeLayout>

    <com.cylan.jiafeigou.widget.ImageViewTip
        android:id="@+id/img_home_mine_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@drawable/add_circle"
        tim:showDot="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rLayout_home_mine_top"
        android:orientation="vertical">

        <com.cylan.jiafeigou.widget.HomeMineItemView
            android:id="@+id/home_mine_item_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/y4"
            tim:leftDrawable="@drawable/ico_device_ac"
            tim:rightDrawable="@drawable/ico_device_set"
            tim:text="亲朋好友" />

        <com.cylan.jiafeigou.widget.HomeMineItemView
            android:id="@+id/home_mine_item_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            tim:leftDrawable="@drawable/ico_device_ac"
            tim:rightDrawable="@drawable/ico_device_set"
            tim:text="分享设备" />

        <com.cylan.jiafeigou.widget.HomeMineItemView
            android:id="@+id/home_mine_item_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            tim:leftDrawable="@drawable/ico_device_ac"
            tim:rightDrawable="@drawable/ico_device_set"
            tim:text="帮助与反馈" />

        <com.cylan.jiafeigou.widget.HomeMineItemView
            android:id="@+id/home_mine_item_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            tim:leftDrawable="@drawable/ico_device_ac"
            tim:rightDrawable="@drawable/ico_device_set"
            tim:text="设置" />
    </LinearLayout>


</RelativeLayout>
