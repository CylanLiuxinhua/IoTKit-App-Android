<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hunt="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/color_white">

    <FrameLayout
        android:id="@+id/rLayout_home_mine_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y238"
        android:background="@drawable/bg_mine_top_default">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#40000000" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <com.cylan.jiafeigou.widget.wave.ShadowLayout
                android:id="@+id/shadow_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y16"
                android:layout_gravity="center_horizontal"
                hunt:sl_cornerRadius="@dimen/x56"
                hunt:sl_dx="0dp"
                hunt:sl_dy="@dimen/y2"
                hunt:sl_shadowColor="#88000000"
                hunt:sl_shadowRadius="@dimen/x2">

            <com.cylan.jiafeigou.widget.roundedimageview.RoundedImageView
                    android:id="@+id/iv_home_mine_portrait"
                    android:layout_width="@dimen/x76"
                    android:layout_height="@dimen/y76"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/pic_head_normal240px"
                    hunt:riv_oval="true" />
            </com.cylan.jiafeigou.widget.wave.ShadowLayout>

            <TextView
                android:id="@+id/tv_home_mine_nick"
                style="@style/text_base_singleLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/y13"
                android:text="@string/Tap3_LogIn"
                android:maxLength="8"
                android:ellipsize="end"
                android:textColor="@color/color_white"
                android:textSize="19sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <com.cylan.jiafeigou.widget.MsgBoxView
            android:id="@+id/tv_home_mine_msg_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:layout_marginEnd="@dimen/x13"
            android:layout_marginTop="@dimen/y17"
            android:padding="@dimen/x5"
            android:clickable="true"
            android:src="@drawable/icon_mine_message"
            hunt:mb_circleColor="@color/color_red_dot_f43531"
            hunt:mb_textColor="@color/color_white"
            hunt:mb_textSize="10sp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rLayout_home_mine_top"
        android:orientation="vertical">

        <com.cylan.jiafeigou.widget.HomeMineItemView
            android:id="@+id/home_mine_item_friend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y60"
            android:clickable="true"
            hunt:leftDrawable="@drawable/icon_mine_friend"
            hunt:rightDrawable="@drawable/list_icon_next"
            hunt:text="@string/Tap3_Friends"
            hunt:textColor="@color/color_333333"
            hunt:textSize="16sp" />

        <com.cylan.jiafeigou.widget.HomeMineItemView
            android:id="@+id/home_mine_item_share"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y60"
            hunt:leftDrawable="@drawable/icon_mine_share"
            hunt:rightDrawable="@drawable/list_icon_next"
            hunt:text="@string/Tap3_ShareDevice"
            hunt:textColor="@color/color_333333"
            hunt:textSize="16sp" />

        <com.cylan.jiafeigou.widget.HomeMineItemView
            android:id="@+id/home_mine_item_help"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y60"
            hunt:leftDrawable="@drawable/icon_mine_hlep"
            hunt:rightDrawable="@drawable/list_icon_next"
            hunt:text="@string/Tap3_Feedback"
            hunt:textColor="@color/color_333333"
            hunt:textSize="16sp" />

        <com.cylan.jiafeigou.widget.HomeMineItemView
            android:id="@+id/home_mine_item_settings"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y60"
            hunt:leftDrawable="@drawable/me_icon_setting"
            hunt:rightDrawable="@drawable/list_icon_next"
            hunt:text="@string/SETTINGS"
            hunt:textColor="@color/color_333333"
            hunt:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>
