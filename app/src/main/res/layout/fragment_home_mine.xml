<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tim="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/rLayout_home_mine_top"
        android:layout_width="match_parent"
        android:layout_height="238dp">

        <TextView
            android:id="@+id/tv_home_mine_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="76dp"
            android:drawablePadding="16dp"
            android:drawableTop="@drawable/icon_mine_head_normal"
            android:gravity="center_horizontal"
            android:text="用户昵称"
            android:textColor="@color/white"
            android:textSize="19sp" />
    </RelativeLayout>

    <com.cylan.jiafeigou.widget.ImageViewTip
        android:id="@+id/img_home_mine_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="17dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/icon_mine_message"
        tim:showDot="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rLayout_home_mine_top"
        android:orientation="vertical">

        <com.cylan.jiafeigou.widget.HomeMineItemView
            android:id="@+id/home_mine_item_friend"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            tim:leftDrawable="@drawable/icon_mine_friend"
            tim:rightDrawable="@drawable/icon_mine_arrow_next"
            tim:text="亲朋好友" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e8e8e8" />

        <com.cylan.jiafeigou.widget.HomeMineItemView
            android:id="@+id/home_mine_item_share"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            tim:leftDrawable="@drawable/icon_mine_share"
            tim:rightDrawable="@drawable/icon_mine_arrow_next"
            tim:text="分享设备" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e8e8e8" />

        <com.cylan.jiafeigou.widget.HomeMineItemView
            android:id="@+id/home_mine_item_help"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            tim:leftDrawable="@drawable/icon_mine_hlep"
            tim:rightDrawable="@drawable/icon_mine_arrow_next"
            tim:text="帮助与反馈" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e8e8e8" />

        <com.cylan.jiafeigou.widget.HomeMineItemView
            android:id="@+id/home_mine_item_settings"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            tim:leftDrawable="@drawable/icon_mine_setting"
            tim:rightDrawable="@drawable/icon_mine_arrow_next"
            tim:text="设置" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e8e8e8" />
    </LinearLayout>


</RelativeLayout>
