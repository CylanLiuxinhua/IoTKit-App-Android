<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tim="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">


    <RelativeLayout
        android:id="@+id/rLayout_home_mine_top"
        android:layout_width="match_parent"
        android:layout_height="238dp"
        android:background="@drawable/bg_mine_top_defult_background">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#40000000" />


        <com.cylan.jiafeigou.widget.roundedimageview.RoundedImageView
            android:id="@+id/iv_home_mine_portrait"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="76dp"
            android:elevation="10dp"
            android:src="@drawable/icon_mine_head_normal"
            tim:riv_border_color="#03ffffff"
            tim:riv_border_width="4dp"
            tim:riv_oval="true" />


        <TextView
            android:id="@+id/tv_home_mine_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_home_mine_portrait"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:text="用户昵称"
            android:textColor="@color/color_white"
            android:textSize="19sp" />


        <ImageView
            android:id="@+id/iv_mine_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/icon_mine_message" />

        <TextView
            android:id="@+id/tv_home_mine_msg_count"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignLeft="@id/iv_mine_msg"
            android:layout_alignTop="@id/iv_mine_msg"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_mine_msg_count_oval"
            android:gravity="center"
            android:text="77"
            android:textColor="@android:color/white"
            android:textSize="9sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rLayout_home_mine_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.cylan.jiafeigou.widget.HomeMineItemView
                android:id="@+id/home_mine_item_friend"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                tim:leftDrawable="@drawable/icon_mine_friend"
                tim:rightDrawable="@drawable/icon_mine_arrow_next"
                tim:text="亲朋好友" />


            <com.cylan.jiafeigou.widget.HomeMineItemView
                android:id="@+id/home_mine_item_share"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                tim:leftDrawable="@drawable/icon_mine_share"
                tim:rightDrawable="@drawable/icon_mine_arrow_next"
                tim:text="分享设备" />


            <com.cylan.jiafeigou.widget.HomeMineItemView
                android:id="@+id/home_mine_item_help"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                tim:leftDrawable="@drawable/icon_mine_hlep"
                tim:rightDrawable="@drawable/icon_mine_arrow_next"
                tim:text="帮助与反馈" />


            <com.cylan.jiafeigou.widget.HomeMineItemView
                android:id="@+id/home_mine_item_settings"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                tim:leftDrawable="@drawable/icon_mine_setting"
                tim:rightDrawable="@drawable/icon_mine_arrow_next"
                tim:text="设置" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
