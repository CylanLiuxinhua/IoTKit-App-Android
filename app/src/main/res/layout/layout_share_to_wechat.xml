<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_panorama_share_to_wechat_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_0ba8cf">

        <Button
            android:id="@+id/layout_panorama_share_to_wechat_toolbar_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="@dimen/y15"
            android:text="取消"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="分享到微信"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp18" />

        <Button
            android:id="@+id/layout_panorama_share_to_wechat_toolbar_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:padding="@dimen/y15"
            android:text="分享"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp14" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_panorama_share_to_wechat_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y187"
        android:layout_below="@id/layout_panorama_share_to_wechat_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/y15"
            android:layout_marginEnd="@dimen/y15"
            android:layout_marginStart="@dimen/y15"
            android:layout_marginTop="@dimen/y21">

            <FrameLayout
                android:id="@+id/layout_panorama_share_to_wechat_preview_container"
                android:layout_width="@dimen/y66"
                android:layout_height="@dimen/y66">

            </FrameLayout>

            <EditText
                android:id="@+id/layout_panorama_share_to_wechat_content_text_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/y15"
                android:layout_toEndOf="@id/layout_panorama_share_to_wechat_preview_container"
                android:background="@null"
                android:textColor="#666666"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/layout_panorama_share_to_wechat_content_text_remain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="40"
                android:textColor="#ADADAD"
                android:textSize="@dimen/sp13" />

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_panorama_share_to_wechat_expain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_panorama_share_to_wechat_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/y15"
            android:text="分享内容将在服务器保存七天"
            android:textColor="#888888"
            android:textSize="@dimen/sp13" />

    </RelativeLayout>
</RelativeLayout>