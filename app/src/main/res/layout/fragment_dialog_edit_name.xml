<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x24"
            android:layout_marginTop="@dimen/y24"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp16" />

        <LinearLayout
            android:id="@+id/lLayout_input_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x24"
            android:layout_marginStart="@dimen/x24"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_input_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/et_input_box_clear"
                    android:background="@null"
                    android:hint="@string/DEViCE_NAME"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLength="12"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/color_666666"
                    android:textColorHint="@color/color_666666"
                    android:textSize="@dimen/sp14" />

                <ImageView
                    android:id="@+id/et_input_box_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/x10"
                    android:src="@drawable/icon_clear_text" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_marginTop="@dimen/y7"
                android:background="@color/color_4b9fd5" />
        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y16"
            android:layout_marginEnd="@dimen/x16"
            android:layout_marginStart="@dimen/x16"
            android:layout_marginTop="@dimen/y24">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y36"
                android:layout_gravity="end"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_confirm"
                    android:layout_width="@dimen/x58"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="@dimen/x5"
                    android:text="@string/OK"
                    android:textColor="@color/color_4b9fd5"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="@dimen/x58"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/x10"
                    android:gravity="center"
                    android:padding="@dimen/x5"
                    android:text="@string/CANCEL"
                    android:textColor="@color/color_4b9fd5"
                    android:textSize="@dimen/sp14" />
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>