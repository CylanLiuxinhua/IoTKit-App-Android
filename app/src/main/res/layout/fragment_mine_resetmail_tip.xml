<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hunt="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_white"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.cylan.jiafeigou.widget.CustomToolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        hunt:ct_background_color="@color/color_0ba8cf"
        hunt:ct_fit_system_window="true"
        hunt:ct_icon="@drawable/nav_icon_back_white"
        hunt:ct_left_title="@string/Tap0_register_EmailVerification"
        hunt:ct_left_title_color="@color/color_white" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y55"
            android:textColor="@color/color_7c7c7c"
            android:textSize="@dimen/sp15"
            android:text="@string/Tap0_AlreadyEmailed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y10"
            android:background="@drawable/little_shape" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_mail_address"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y18"
        android:textSize="@dimen/sp15"
        android:textColor="@color/color_7c7c7c"
        android:text="22220@sina.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y18"
        android:textSize="@dimen/sp15"
        android:textColor="@color/color_7c7c7c"
        android:text="@string/Tap0_Click_ActivateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_mail_connect_submit"
        style="@style/login_model_commit_style"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y45"
        android:text="@string/Button_Sure" />

</LinearLayout>