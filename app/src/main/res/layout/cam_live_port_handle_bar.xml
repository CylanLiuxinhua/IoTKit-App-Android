<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fLayout_live_port_bottom_control_bar"
    android:layout_width="match_parent"
    android:layout_height="39dp">

    <LinearLayout
        android:id="@+id/lLayout_protection"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <FrameLayout
            android:id="@+id/fLayout_cam_live_protection_flip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_cam_protection_on" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_cam_protection_off"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_cam_live_protection"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="安全防护"
            android:textColor="@color/color_white"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lLayout_live_time"
        style="@style/ripple_background"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cam_live"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="直播"
            android:textColor="@color/color_white"
            android:textSize="11sp" />

        <Space
            android:layout_width="2dp"
            android:layout_height="1dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:background="@color/color_white" />

        <Space
            android:layout_width="2dp"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/tv_cam_show_timeline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="5/16 12:30"
            android:textColor="@color/color_white"
            android:textSize="11sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgV_cam_zoom_to_full_screen"
        style="@style/ripple_background"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:src="@drawable/icon_live_zoom_full_screen" />
</FrameLayout>