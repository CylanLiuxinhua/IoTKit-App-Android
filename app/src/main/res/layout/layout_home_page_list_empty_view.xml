<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lLayout_home_page_list_empty_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:visibility="visible"
    app:layout_behavior="com.cylan.jiafeigou.widget.AlwaysCenterBehavior">

    <ImageView
        android:id="@+id/imgv_empty_layout_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y30"
        android:src="@drawable/pic_none_equipment" />

    <TextView
        android:id="@+id/tv_empty_layout_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y20"
        android:text="@string/Tap1_Index_NoDevice"
        android:textColor="@color/color_33333"
        android:textSize="@dimen/sp16" />

    <TextView
        android:id="@+id/tv_empty_layout_sub_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y13"
        android:text="@string/Tap1_AddDeviceTips"
        android:textColor="@color/color_888888"
        android:textSize="@dimen/sp14" />
</LinearLayout>
