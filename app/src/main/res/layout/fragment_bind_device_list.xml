<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hunt="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    tools:context="com.cylan.jiafeigou.n.view.bind.BindDeviceListFragment">


    <com.cylan.jiafeigou.widget.CustomToolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        hunt:ct_fit_system_window="true"
        hunt:ct_icon="@drawable/nav_icon_back_gary" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y48"
        android:layout_marginTop="@dimen/y20"
        android:gravity="center"
        android:text="选取设备"
        android:textColor="@color/color_black"
        android:textSize="@dimen/sp22" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_to_bind_device_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/y44" />
</LinearLayout>
