<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    style="@style/root"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_editscenc"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo_about"
            style="@style/logo_about" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_config"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/check_updata"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_config_item_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_update"
                    style="@style/setting_text"
                    android:layout_width="wrap_content"
                    android:paddingRight="0dp"
                    android:text="@string/check_upgrade"
                    android:textSize="@dimen/area_code_size" />

                <ImageView
                    android:id="@+id/new_version_remind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/text_update"
                    android:src="@drawable/ico_msg_remind"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/login_edit_maginr"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:scaleType="fitXY"
                    android:textColor="#8c8c8c"
                    android:textSize="14sp" />


            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/login_edit_maginr"
                android:visibility="gone"
                android:background="@color/setting_line_color" />

            <RelativeLayout
                android:id="@+id/layout_help"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/bg_config_item_selector">

                <TextView
                    style="@style/setting_text"
                    android:text="@string/USER_HELP"
                    android:textSize="@dimen/area_code_size" />

                <TextView
                    android:id="@+id/tel_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="@dimen/login_edit_maginr"
                    android:scaleType="fitXY"
                    android:src="@drawable/ico_default_headpic"
                    android:textColor="#8c8c8c" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/login_edit_maginr"
                    android:drawableRight="@drawable/setting_icon_arrow" />
            </RelativeLayout>

            <View
                android:id="@+id/net_line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/login_edit_maginr"
                android:background="@color/setting_line_color" />

            <LinearLayout
                android:id="@+id/net"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_config_item_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_text"
                    android:layout_width="wrap_content"
                    android:text="@string/WEB"
                    android:textSize="@dimen/area_code_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/login_edit_maginr"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/setting_icon_arrow"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="@string/show_web"
                    android:textColor="#8c8c8c" />
            </LinearLayout>

            <View
                android:id="@+id/hotline_line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/login_edit_maginr"
                android:background="@color/setting_line_color" />

            <LinearLayout
                android:id="@+id/service_hotline"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_config_item_selector"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_text"
                    android:layout_width="wrap_content"
                    android:text="@string/ABOUT_PHONE"
                    android:textSize="@dimen/area_code_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/login_edit_maginr"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/setting_icon_arrow"
                    android:gravity="right"
                    android:scaleType="fitXY"
                    android:singleLine="true"
                    android:text="@string/service_phonenum"
                    android:textColor="#8c8c8c" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/agreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dip"
                android:text="@string/TERM_OF_USE"
                android:textColor="@color/get_code_enable"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/copyrightEn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:gravity="center"
                android:text="@string/copyrightEn"
                android:textColor="#adadad"
                android:textSize="11sp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>