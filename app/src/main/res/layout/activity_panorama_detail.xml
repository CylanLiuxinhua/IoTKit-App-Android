<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/act_panorama_detail_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y48"
        android:background="#4C000000">

        <Button
            android:id="@+id/tv_top_bar_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawablePadding="@dimen/y15"
            android:drawableStart="@drawable/nav_tab_back_selector"
            android:padding="@dimen/y15"
            android:text="720全景相机"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp16" />

        <ImageButton
            android:id="@+id/act_panorama_detail_toolbar_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/act_panorama_detail_toolbar_more"
            android:background="@android:color/transparent"
            android:padding="@dimen/y14"
            android:src="@drawable/details_icon_share" />

        <ImageButton
            android:id="@+id/act_panorama_detail_toolbar_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:padding="@dimen/y14"
            android:src="@drawable/details_icon_more" />

    </RelativeLayout>


    <ViewSwitcher
        android:id="@+id/act_panorama_detail_bottom_panel_switcher"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y73"
        android:layout_alignParentBottom="true"
        android:background="#4C000000">

        <RelativeLayout
            android:id="@+id/act_panorama_detail_bottom_video_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <SeekBar
                android:id="@+id/act_panorama_detail_bottom_video_menu_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="0dp"
                android:progress="40"
                android:progressDrawable="@drawable/seek_bar_drawable"
                android:secondaryProgress="70"
                android:thumb="@drawable/seek_bar_dot_white" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/y16">

                <ImageButton
                    android:id="@+id/act_panorama_detail_bottom_video_menu_play"
                    android:layout_width="@dimen/y25"
                    android:layout_height="@dimen/y25"
                    android:layout_marginEnd="@dimen/y15"
                    android:layout_marginStart="@dimen/y16"
                    android:background="@null"
                    android:src="@drawable/icon_play" />

                <TextView
                    android:id="@+id/act_panorama_detail_bottom_video_menu_time_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="00:16"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/sp11" />

                <ImageButton
                    android:id="@+id/act_panorama_detail_bottom_video_menu_photograph"
                    android:layout_width="@dimen/y25"
                    android:layout_height="@dimen/y25"
                    android:layout_marginEnd="@dimen/y32"
                    android:background="@null"
                    android:src="@drawable/video_icon_camera" />

                <ImageButton
                    android:id="@+id/act_panorama_detail_bottom_video_menu_vr"
                    android:layout_width="@dimen/y25"
                    android:layout_height="@dimen/y25"
                    android:layout_marginEnd="@dimen/y32"
                    android:background="@null"
                    android:src="@drawable/video_icon_vr" />

                <ImageButton
                    android:id="@+id/act_panorama_detail_bottom_video_menu_panorama"
                    android:layout_width="@dimen/y25"
                    android:layout_height="@dimen/y25"
                    android:layout_marginEnd="@dimen/y32"
                    android:background="@null"
                    android:src="@drawable/video_icon_asteroid" />

                <ImageButton
                    android:id="@+id/act_panorama_detail_bottom_video_menu_gyroscope"
                    android:layout_width="@dimen/y25"
                    android:layout_height="@dimen/y25"
                    android:layout_marginEnd="@dimen/y32"
                    android:background="@null"
                    android:src="@drawable/video_icon_gyroscope" />

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/act_panorama_detail_bottom_picture_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/y16"
                android:gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/act_panorama_detail_bottom_picture_menu_photograph"
                    android:layout_width="@dimen/y38"
                    android:layout_height="@dimen/y38"
                    android:background="@null"
                    android:src="@drawable/photos_icon_camera" />

                <ImageButton
                    android:id="@+id/act_panorama_detail_bottom_picture_menu_vr"
                    android:layout_width="@dimen/y38"
                    android:layout_height="@dimen/y38"
                    android:layout_marginStart="@dimen/y47"
                    android:background="@null"
                    android:src="@drawable/photos_icon_vr" />

                <ImageButton
                    android:id="@+id/act_panorama_detail_bottom_picture_menu_panorama"
                    android:layout_width="@dimen/y38"
                    android:layout_height="@dimen/y38"
                    android:layout_marginStart="@dimen/y47"
                    android:background="@null"
                    android:src="@drawable/photos_icon_asteroid" />

                <ImageButton
                    android:id="@+id/act_panorama_detail_bottom_picture_menu_gyroscope"
                    android:layout_width="@dimen/y38"
                    android:layout_height="@dimen/y38"
                    android:layout_marginStart="@dimen/y47"
                    android:background="@null"
                    android:src="@drawable/photos_icon_gyroscope" />
            </LinearLayout>


        </RelativeLayout>


    </ViewSwitcher>
</RelativeLayout>