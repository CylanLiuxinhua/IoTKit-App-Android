<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="19dp"
    android:paddingTop="19dp">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:background="@drawable/bg_time"
        android:gravity="center"
        android:text="111"
        android:textColor="@color/white" />


    <com.cylan.jiafeigou.widget.CircleImageView
        android:id="@+id/headpic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/time"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ico_efamily_ihome" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/time"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/headpic"
        android:text="视频通话"
        android:textColor="#444444"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/answer_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:paddingRight="14sp"
        android:paddingLeft="24sp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/headpic"
        android:background="@drawable/bg_efamily_left"
        android:drawableLeft="@drawable/ico_answer_call_left"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="通话时长 10:30"
        android:textColor="#969696"
        android:textSize="15sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/missed_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:paddingRight="14sp"
        android:paddingLeft="24sp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/headpic"
        android:background="@drawable/bg_efamily_left"
        android:drawableLeft="@drawable/ico_missed_call"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="@string/EFAMILY_MISSED_CALL"
        android:textColor="#ff1744"
        android:textSize="15sp"
        android:visibility="gone" />

</RelativeLayout>