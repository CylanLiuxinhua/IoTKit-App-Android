<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:clickable="true"
    android:orientation="vertical">

    <FrameLayout
        android:background="@color/color_0ba8cf"
        android:id="@+id/rl_tab_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_top_bar_left_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:padding="@dimen/x15"
                android:src="@drawable/nav_tab_back_selector" />

            <TextView
                android:layout_toRightOf="@id/iv_top_bar_left_back"
                android:id="@+id/tv_save_username"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y48"
                android:gravity="center_vertical"
                android:text="@string/ALIAS"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp18" />

            <ImageView
                android:id="@+id/iv_mine_personal_setname_bind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:padding="@dimen/x15"
                android:src="@drawable/icon_finish"
                android:visibility="visible" />
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y54"
            android:layout_marginTop="@dimen/y8">

            <EditText
                android:id="@+id/et_mine_personal_information_new_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:background="@null"
                android:hint="@string/USER_NAME"
                android:maxLength="12"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp16" />

            <View
                android:id="@+id/view_mine_personal_information_new_name_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/y8"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:background="@color/color_f2f2f2" />

            <ImageView
                android:id="@+id/iv_mine_personal_information_new_name_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x20"
                android:src="@drawable/icon_clear_text"
                android:visibility="gone" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y10"
            android:background="@drawable/little_shape" />
    </FrameLayout>
</LinearLayout>

