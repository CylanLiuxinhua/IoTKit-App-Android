<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/y20"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="2016/04/01 12:00"
        android:textColor="#adadad"
        android:textSize="@dimen/sp13" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_mine_message_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginTop="@dimen/y22">

            <CheckBox
                android:id="@+id/delete_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x15"
                android:background="@drawable/custom_rtbn_style1"
                android:button="@null"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_mesg_icon"
                android:layout_width="@dimen/x41"
                android:layout_height="@dimen/y40"
                android:layout_toRightOf="@id/delete_check"
                android:src="@drawable/pic_head" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/x230"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y26"
            android:layout_toRightOf="@id/rl_mine_message_server"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y4"
                android:layout_marginLeft="@dimen/x14"
                android:text="门铃二"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp13" />

            <TextView
                android:id="@+id/mesg_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y10"
                android:layout_marginLeft="@dimen/x8"
                android:layout_marginRight="@dimen/x8"
                android:background="@drawable/pic_container_white"
                android:text="亲爱的用户,客户端将进行系统维护升级,期间对设备正常使用将会造成一定影响，对您造成的不便之处敬请谅解。再次感谢您对加菲狗的支持！"
                android:textColor="#666666"
                android:textIsSelectable="true"
                android:textSize="@dimen/sp14" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>