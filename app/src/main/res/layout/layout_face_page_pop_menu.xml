<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="@dimen/y150"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/y24"
        android:paddingEnd="@dimen/y24"
        android:paddingStart="@dimen/y24"
        android:paddingTop="@dimen/y21">

        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DELETE"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/detect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y24"
            android:text="@string/MESSAGES_FACE_IDENTIFY"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/viewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y24"
            android:text="@string/DOOR_BELL_LOOK"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp16" />

    </LinearLayout>
</android.support.v7.widget.CardView>