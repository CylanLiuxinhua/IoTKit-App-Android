<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black"
    android:clickable="true"
    android:fitsSystemWindows="true"
    tools:context=".n.view.media.BigPicFragment">

    <FrameLayout
        android:id="@+id/fLayout_big_pic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_big_pic_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/btn_login_nav_close" />

        <TextView
            android:id="@+id/tv_big_pic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="2016-09-06 16:26:10"
            android:textColor="@color/color_white"
            android:textSize="16sp" />
    </FrameLayout>

    <com.cylan.photoview.PhotoView
        android:id="@+id/imgV_show_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:transitionName="picDetailsFragment"
        tools:ignore="ContentDescription,UnusedAttribute" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/imgV_big_pic_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:padding="15dp"
            android:src="@drawable/icon_download" />

        <ImageView
            android:id="@+id/imgV_big_pic_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:padding="15dp"
            android:src="@drawable/icon_share" />

        <ImageView
            android:id="@+id/imgV_big_pic_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="25dp"
            android:padding="15dp"
            android:src="@drawable/icon_collection" />
    </FrameLayout>
</FrameLayout>
