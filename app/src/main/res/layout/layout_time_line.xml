<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fLayout_wonderful_timeline"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone">


    <TextView
        android:id="@+id/tv_time_line_pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/time_line_pop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time_line_pop"
        android:background="@color/color_f6f9fa">

        <View
            android:id="@+id/v_simple_38line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_marginBottom="@dimen/y5"
            android:layout_marginTop="@dimen/y5"
            android:background="@color/color_d2d2d2" />


        <com.cylan.jiafeigou.widget.wheel.WheelView
            android:id="@+id/wv_wonderful_timeline"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y55"
            android:layout_alignParentBottom="true" />

        <View
            android:layout_width="@dimen/x3"
            android:layout_height="@dimen/y40"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</RelativeLayout>