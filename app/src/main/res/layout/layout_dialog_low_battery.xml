<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".n.view.cam.SetSensitivityDialogFragment">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/low_battery_popup_top" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/low_battery_popup_top_icon" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_corner_pop_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        android:paddingTop="@dimen/y17">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备电量较低 请及时充电"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/tv_low_battery_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y17"
            android:text="@string/DOOR_LOW_BATTERY"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_marginTop="@dimen/y18"
            android:background="@color/color_E1E1E1" />

        <TextView
            android:id="@+id/tv_low_battery_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y48"
            android:layout_gravity="end"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:gravity="center"
            android:text="知道了"
            android:textColor="@color/color_4b9fd5"
            android:textSize="@dimen/sp15" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgv_close_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y36"
        android:src="@drawable/btn_close_dialog" />
</LinearLayout>
