<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_editscenc"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_near_share_default"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:paddingRight="15dp"
            android:text="@string/SHARE_ACCOUNT"
            android:textColor="#000000"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/edit"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="15dp"
            android:hint="@string/SHARE_E_MAIL"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/search_address_list"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/btn_choosefromaddresslist_selector" />
    </LinearLayout>

    <TextView
        android:id="@+id/add_share"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_addshare_blue"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/ADD_SHARE"
        android:textColor="@color/enable_share"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/shared_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="@string/SHARE_NAME"
            android:textColor="#5f646e"
            android:textSize="15sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:background="@color/setting_line_color" />

        <ListView
            android:id="@+id/shared_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/setting_line_color"
            android:dividerHeight="1dp"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/setting_line_color" />
    </LinearLayout>

</LinearLayout>