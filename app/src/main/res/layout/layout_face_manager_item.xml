<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/y2">

    <ImageView
        android:id="@+id/face"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pic_welcome_page_1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/y4"
        android:layout_marginTop="@dimen/y4"
        android:button="@drawable/custom_rtbn_style1"
        android:checked="true"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="@+id/face"
        app:layout_constraintTop_toTopOf="@+id/face" />

</android.support.constraint.ConstraintLayout>