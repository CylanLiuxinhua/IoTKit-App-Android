<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_editscenc">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y560">

        <RelativeLayout
            android:id="@+id/remoteView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" />

        <ImageView
            android:id="@+id/cache_page"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@drawable/bg_loading"
            android:visibility="visible" />

        <ViewSwitcher
            android:id="@+id/viewswitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/btn_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/bg_online_play_selector" />

            <ProgressBar
                android:id="@+id/load_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:indeterminateBehavior="repeat"
                android:indeterminateDrawable="@anim/play_loading"
                android:visibility="visible" />
        </ViewSwitcher>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/layout1"
        android:layout_marginTop="@dimen/modify_bindphone"
        android:visibility="gone">

        <HorizontalScrollView
            android:id="@+id/mDayHS"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bg_choose_day"
            android:scrollbars="none">

            <RadioGroup
                android:id="@+id/mDays"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/cover"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_time_cover" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hs_layout"
        android:layout_width="fill_parent"
        android:layout_height="93dp"
        android:layout_alignParentBottom="true">

        <com.cylan.jiafeigou.widget.SlowHorizontalScrollView
            android:id="@+id/progress_hs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/progress"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <com.cylan.jiafeigou.widget.CustomProgressView
                    android:id="@+id/progress_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/bg_history_video_progress"
                    android:orientation="horizontal"/>

                <LinearLayout
                    android:id="@+id/progress_time"
                    android:layout_width="fill_parent"
                    android:layout_height="28dp"
                    android:orientation="horizontal"/>
            </LinearLayout>
        </com.cylan.jiafeigou.widget.SlowHorizontalScrollView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/history_video_cusor" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hs_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_historyvideo_selector"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/historyvideo_drawableright"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="00:00:00"
        android:textColor="@color/history_video_days_checked_color"
        android:textSize="16sp" />

    <include
        android:id="@+id/no_video_layout"
        layout="@layout/layout_no_video"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" />

    <include
        android:id="@+id/loading_layout"
        layout="@layout/layout_loading_video"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" />

</RelativeLayout>
