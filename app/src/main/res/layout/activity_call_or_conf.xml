<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_editscenc">


    <RelativeLayout
        android:id="@+id/scrollview_holder_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlebar"
        android:gravity="center">


        <ScrollView
            android:id="@+id/scrollview_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">


            <RelativeLayout
                android:id="@+id/remoteview_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y560">

                <LinearLayout
                    android:id="@+id/remoteView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" />

                <ImageView
                    android:id="@+id/layout_loading_pic"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_loading" />
            </RelativeLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ViewSwitcher
                android:id="@+id/viewswitcher"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_live_refresh"
                    android:visibility="visible" />

                <ProgressBar
                    android:id="@+id/load_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:indeterminateBehavior="repeat"
                    android:indeterminateDrawable="@anim/play_loading"
                    android:visibility="visible" />
            </ViewSwitcher>

            <ImageView
                android:id="@+id/online_control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_online_play_selector"
                android:visibility="visible" />

            <TextView
                android:id="@+id/sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:gravity="center"
                android:text="@string/OFFLINE_ERR"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/SEE_HELP"
                android:textColor="@color/help"
                android:textSize="15sp"
                android:visibility="gone" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/scrollview_holder_layout"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_online_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/screenshot"
                style="@style/video_play_btn"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/btn_land_tackpic_selector" />

            <ImageView
                android:id="@+id/voice"
                style="@style/video_play_btn"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/btn_close_voice_selector" />

            <ImageView
                android:id="@+id/mike"
                style="@style/video_play_btn"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/btn_port_mike_close_selector" />

            <ImageView
                android:id="@+id/fullscreen"
                style="@style/video_play_btn"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/btn_port_switch_screen_selector" />
        </LinearLayout>

        <include
            android:id="@+id/quick_menu_layout"
            layout="@layout/layout_menu_quickset"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:paddingRight="25dp" />

    </LinearLayout>

    <include
        android:id="@+id/titlebar"
        layout="@layout/layout_titlebar" />

    <include
        android:id="@+id/land_titlebar"
        layout="@layout/layout_video_land_titlebar"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/titlebar"
        android:visibility="gone" />


    <include
        android:id="@+id/land_bottom"
        layout="@layout/layout_video_land_bottom"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />


    <TextView
        android:id="@+id/code_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/land_titlebar"
        android:layout_margin="10dp"
        android:background="@drawable/bg_video_speed"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone" />

</RelativeLayout>