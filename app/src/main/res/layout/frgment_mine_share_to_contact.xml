<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_white"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_mine_share_to_contact"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y73"
        android:background="#0BA8CF">

        <ImageView
            android:id="@+id/iv_mine_share_to_contact_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/x15"
            android:src="@drawable/nav_tab_back_selector" />

        <FrameLayout
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y12"
            android:layout_marginLeft="@dimen/x48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_top_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Tap3_ShareDevice_ToContacts"
                android:textColor="@color/color_white"
                android:textSize="18sp" />

            <EditText
                android:singleLine="true"
                android:id="@+id/et_search_contact"
                android:visibility="gone"
                android:textColor="@color/color_white"
                android:textColorHint="#60ffffff"
                android:background="@null"
                android:hint="@string/Search"
                android:textCursorDrawable="@drawable/search_friend_cursor_color"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <ImageView
            android:src="@drawable/icon_search"
            android:id="@+id/iv_mine_share_to_contact_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:padding="@dimen/x15" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcy_mine_share_to_contact_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/ll_no_contact"
            android:visibility="invisible"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/y120"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/icon_no_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/y16"
                android:text="暂无联系人"
                android:textColor="#aaaaaa"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y10"
            android:background="@drawable/little_shape" />

    </FrameLayout>

</LinearLayout>