<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/color_white"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_home_mine_suggestion_bottom"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="54dp"
            android:background="@color/color_f0f0f0"
            android:clickable="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_e1e1e1"/>

            <EditText
                android:id="@+id/et_home_mine_suggestion"
                android:layout_width="288dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/home_mine_suggestion_shape"
                android:hint="@string/Tap3_Feedback_TextTips"
                android:maxLength="128"
                android:paddingLeft="10dp"
                android:textColorHint="@color/color_cecece"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_home_mine_suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="19dp"
                android:clickable="true"
                android:contextClickable="true"
                android:text="@string/Tap3_FriendsAdd_Send"
                android:textColor="@color/color_4b9fd5"
                android:textSize="18sp" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="48dp"
            android:id="@+id/rv_home_mine_suggestion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/rl_home_mine_suggestion_bottom"
            android:overScrollMode="never"
            android:gravity="bottom"
            android:layout_marginBottom="4dp"
            android:scrollbars="none" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/rl_home_mine_suggestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0BA8CF">

            <TextView
                android:drawableLeft="@drawable/nav_tab_back_selector"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/Tap3_Feedback"
                android:drawablePadding="15dp"
                android:padding="15dp"
                android:textColor="@color/color_white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_mine_help_suggestion_clear"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="right"
                android:clickable="true"
                android:padding="15dp"
                android:text="@string/CLEAR"
                android:textColor="@color/color_white"
                android:textSize="14sp" />
        </FrameLayout>

    </LinearLayout>

</FrameLayout>
