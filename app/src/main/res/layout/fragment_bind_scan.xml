<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hunt="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cylan.jiafeigou.n.view.bind.BindScanFragment">


    <com.cylan.jiafeigou.support.zscan.ZXingScannerView
        android:id="@+id/zxV_scan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        hunt:hint="将取景框对准二维码，即可自动扫描" />

    <ImageView
        android:id="@+id/imgV_nav_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:src="@drawable/btn_nav_back" />

</FrameLayout>
