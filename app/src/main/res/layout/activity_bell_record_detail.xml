<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_bell_record_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.cylan.jiafeigou.n.view.bell.BellRecordDetailActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.cylan.jiafeigou.support.photoview.PhotoView
            android:id="@+id/act_bell_detail_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ic_delete_photo" />
        <!--<com.cylan.jiafeigou.widget.SimpleProgressBar-->
            <!--android:dpMsgId="@+dpMsgId/act_bell_detail_loading"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:padding="@dimen/x5"-->
            <!--app:progress_point_radius="@dimen/y2"-->
            <!--app:progress_radius="@dimen/y20"-->
            <!--app:progress_stroke_color="@color/color_white"-->
            <!--android:visibility="visible"-->
            <!--app:progress_swipe_degree="310"  />-->
    </FrameLayout>

    <FrameLayout
        android:id="@+id/act_bell_pic_option"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:layout_gravity="bottom"
        android:visibility="visible">

        <ImageView
            android:id="@+id/act_bell_picture_opt_download"
            style="@style/picture_opt_download" />

        <ImageView
            android:id="@+id/act_bell_picture_opt_share"
            style="@style/picture_opt_share" />

        <ImageView
            android:id="@+id/act_bell_picture_opt_collection"
            style="@style/picture_opt_collection" />
    </FrameLayout>


    <RelativeLayout
        android:id="@+id/act_bell_header_container"
        style="@style/video_header_container">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/act_bell_header_back"
                style="@style/video_header_back" />

            <TextView
                android:id="@+id/act_bell_header_title"
                style="@style/video_header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp18" />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
