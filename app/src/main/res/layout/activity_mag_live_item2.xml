<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hunt="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_mag_live_day"
            android:layout_width="@dimen/x117"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|end"
            android:text="@string/DOOR_TODAY"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp17" />

        <RelativeLayout
            android:layout_marginLeft="@dimen/x12"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_mag_live"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_dot_gary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.cylan.jiafeigou.widget.DashLineView
                android:layout_centerInParent="true"
                android:layout_below="@id/iv_mag_live"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y21">
            </com.cylan.jiafeigou.widget.DashLineView>

            <TextView
                android:id="@+id/tv_mag_live_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_mag_live"
                android:layout_marginLeft="@dimen/x11"
                android:text="15:05:20 打开"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp17" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>