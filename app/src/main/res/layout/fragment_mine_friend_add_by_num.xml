<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@color/color_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_home_mine_relativesandfriends_add_by_num"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:background="#0BA8CF">

        <ImageView
            android:id="@+id/iv_home_mine_relativesandfriends_add_by_num_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="15dp"
            android:clickable="true"
            android:src="@drawable/icon_nav_back_white" />

        <EditText
            android:id="@+id/et_add_by_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="48dp"
            android:hint="@string/SHARE_ACCOUNT"
            android:maxLength="65"
            android:inputType="textVisiblePassword"
            android:textColor="#ffffff"
            android:textColorHint="#60ffffff"
            android:textCursorDrawable="@drawable/search_friend_cursor_color"
            android:background="@null"
            android:textSize="18sp" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_display_find_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_relative_and_friend_container"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="67dp">

            <com.cylan.jiafeigou.widget.roundedimageview.RoundedImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_userhead"
                android:src="@drawable/pic_head"
                android:layout_width="43dp"
                android:layout_height="43dp" />

            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/iv_userhead"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                >
                <TextView
                    android:id="@+id/tv_username"
                    android:textSize="16sp"
                    android:textColor="@color/color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_user_phone"
                    android:paddingTop="8dp"
                    android:layout_below="@id/tv_username"
                    android:textSize="12sp"
                    android:textColor="@color/color_8c8c8c"
                    android:text="12345678901"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_no_friend"
            android:layout_marginTop="120dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_no_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/btn_add_relative_and_friend"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/Tap3_FriendsAdd_NoContent"
                android:textSize="15sp"
                android:textColor="#aaaaaa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>