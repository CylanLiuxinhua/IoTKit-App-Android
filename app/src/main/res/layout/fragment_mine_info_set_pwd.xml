<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y73"
        android:background="@color/color_0ba8cf">

        <ImageView
            android:id="@+id/iv_mine_set_newpwd_back"
            android:clickable="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/x15"
            android:src="@drawable/nav_tab_back_selector" />

        <TextView
            android:id="@+id/tv_top_title"
            android:layout_marginBottom="@dimen/y12"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/x48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SET_PWD"
            android:textSize="@dimen/sp18"
            android:textColor="@color/color_white" />

        <ImageView
            android:visibility="visible"
            android:id="@+id/iv_mine_info_set_newpwd_able"
            android:layout_marginBottom="@dimen/y2"
            android:padding="@dimen/x15"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_finish_disable" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="@dimen/y8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y54">

            <EditText
                android:id="@+id/et_mine_set_newpwd"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp16"
                android:layout_centerVertical="true"
                android:hint="@string/ENTER_PWD_2"
                android:maxLength="65"
                android:inputType="textPassword"
                android:background="@null"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginLeft="@dimen/x20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/view_mine_set_newpwd_line"
                android:layout_marginBottom="@dimen/y8"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginLeft="@dimen/x20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:background="@color/color_f2f2f2" />

            <LinearLayout
                android:layout_marginRight="@dimen/x20"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_mine_new_pwd_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x10"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/btn_login_clear_text" />

                <CheckBox
                    android:id="@+id/cb_new_pwd_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/icon_common_show_pwd_selector"
                    android:button="@null"
                    android:checked="false" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y10"
            android:background="@drawable/little_shape" />
    </FrameLayout>

</LinearLayout>