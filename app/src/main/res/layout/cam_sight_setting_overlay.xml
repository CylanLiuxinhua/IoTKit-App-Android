<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fLayout_cam_sight_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="#cc000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/camera_icon_overlooking" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y22"
            android:text="俯视:"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y24"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_sight_setting_cancel"
                android:layout_width="@dimen/x95"
                android:layout_height="@dimen/y36"
                android:gravity="center"
                android:text="@string/CANCEL"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/btn_sight_setting_next"
                android:layout_width="@dimen/x95"
                android:layout_height="@dimen/y36"
                android:layout_marginStart="@dimen/x54"
                android:gravity="center"
                android:text="@string/Tap1_Tosetup"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp14" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>