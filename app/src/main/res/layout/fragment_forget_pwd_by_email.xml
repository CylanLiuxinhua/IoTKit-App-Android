<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    tools:context=".n.view.login.ForgetPwdByEmailFragment">

    <TextView
        android:id="@+id/tv_send_email_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:lineSpacingExtra="10dp"
        android:textColor="@color/color_7c7c7c"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_email_confirm"
        style="@style/login_model_commit_style"
        android:layout_below="@+id/tv_send_email_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="37dp"
        android:text="чбошод" />

</RelativeLayout>
