<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_mine_suggestion_server_time"
        android:textColor="@color/color_adadad"
        android:textSize="13sp"
        android:layout_centerHorizontal="true"
        android:text="2016/04/01 12:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_mine_suggestion_server"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/pic_head"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:background="@drawable/pic_container_white"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        android:id="@+id/tv_mine_suggestion_server_speak"
        android:paddingLeft="24dp"
        android:paddingRight="12dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="亲爱的用户,客户端将进行系统维护升级,期间对设备正常使用将会造成一定影响，对您造成的不便之处敬请谅解。再次感谢您对加菲狗的支持！"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/iv_mine_suggestion_server"
        android:layout_width="230dp"
        android:layout_height="wrap_content" />

</RelativeLayout>