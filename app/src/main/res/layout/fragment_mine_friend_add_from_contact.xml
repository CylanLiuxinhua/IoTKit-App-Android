<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hunt="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@color/color_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_home_mine_relativesandfriends_scan_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="#0BA8CF">

        <ImageView
            android:id="@+id/iv_home_mine_relativesandfriends_add_from_contact_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/x15"
            android:clickable="true"
            android:src="@drawable/nav_tab_back_selector" />

        <EditText
            android:id="@+id/et_add_phone_number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y48"
            android:layout_marginLeft="@dimen/x48"
            android:textCursorDrawable="@drawable/search_friend_cursor_color"
            android:hint="@string/Search"
            android:textColorHint="#60ffffff"
            android:background="@null"
            android:textSize="@dimen/sp18" />
    </RelativeLayout>

    <!--<com.cylan.jiafeigou.widget.CustomToolbar-->
        <!--android:id="@+id/custom_toolbar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--hunt:ct_background_color="@color/color_0ba8cf"-->
        <!--hunt:ct_enable_shadow="false"-->
        <!--hunt:ct_fit_system_window="true"-->
        <!--hunt:ct_icon="@drawable/nav_icon_back_white"-->
        <!--hunt:ct_left_title="@string/Tap3_Feedback"-->
        <!--hunt:ct_left_title_color="@color/color_white" />-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcy_contact_list"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/ll_no_contact"
            android:visibility="invisible"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/y120"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/icon_no_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/y16"
                android:text="@string/Tap3_FriendsAdd_NoContacts"
                android:textColor="#aaaaaa"
                android:textSize="@dimen/sp15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y10"
            android:background="@drawable/little_shape" />

    </FrameLayout>

</LinearLayout>