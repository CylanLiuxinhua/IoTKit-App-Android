<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hunt="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <com.cylan.jiafeigou.widget.CustomToolbar
        android:id="@+id/custom_toolbar"
        layout="@layout/layout_default_custom_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        hunt:ct_background_color="@color/color_0ba8cf"
        hunt:ct_enable_shadow="true"
        hunt:ct_enable_theme="true"
        hunt:ct_fit_system_window="true"
        hunt:ct_icon="@drawable/nav_icon_back_white"
        hunt:ct_left_title="@string/EQUIPMENT_INFO"
        hunt:ct_left_title_color="@color/color_white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lLayout_setting_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.cylan.jiafeigou.widget.SettingItemView0
                android:id="@+id/sv_setting_device_alias"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y72"
                android:layout_marginLeft="@dimen/y20"
                android:layout_marginRight="@dimen/y20"
                hunt:sv_image_src="@drawable/setting_icon_information"
                hunt:sv_sub_title="@string/EQUIPMENT_NAME"
                hunt:sv_title="@string/EQUIPMENT_NAME"
                hunt:sv_v_divider="true"
                hunt:sv_v_image_show="false" />

            <RelativeLayout
                android:id="@+id/rl_hardware_update"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y72"
                android:orientation="vertical">

                <com.cylan.jiafeigou.widget.SettingItemView0
                    android:id="@+id/sv_setting_hardware_update"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y72"
                    android:layout_marginLeft="@dimen/y20"
                    android:layout_marginRight="@dimen/y20"
                    hunt:sv_image_src="@drawable/setting_icon_information"
                    hunt:sv_sub_title=""
                    hunt:sv_title="@string/Tap1_FirmwareUpdate"
                    hunt:sv_v_divider="true"
                    hunt:sv_v_image_show="false" />

                <View
                    android:id="@+id/hardware_update_point"
                    android:layout_width="@dimen/y7"
                    android:layout_height="@dimen/y7"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/y20"
                    android:background="@drawable/hardware_update_point"
                    android:visibility="invisible" />
            </RelativeLayout>

            <com.cylan.jiafeigou.widget.SettingItemView0
                android:id="@+id/sv_setting_device_cid"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y72"
                android:layout_marginLeft="@dimen/y20"
                android:layout_marginRight="@dimen/y20"
                hunt:sv_image_src="@drawable/setting_icon_information"
                hunt:sv_title="@string/Tap1_Setting_Cid"
                hunt:sv_v_divider="true"
                hunt:sv_v_image_show="false" />

            <com.cylan.jiafeigou.widget.SettingItemView0
                android:id="@+id/sv_setting_device_wifi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y72"
                android:layout_marginLeft="@dimen/y20"
                android:layout_marginRight="@dimen/y20"
                hunt:sv_image_src="@drawable/setting_icon_information"
                hunt:sv_title="@string/device_Wi_Fi"
                hunt:sv_v_divider="true"
                hunt:sv_v_image_show="false" />

            <com.cylan.jiafeigou.widget.SettingItemView0
                android:id="@+id/sv_setting_device_mac"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y72"
                android:layout_marginLeft="@dimen/y20"
                android:layout_marginRight="@dimen/y20"
                hunt:sv_image_src="@drawable/setting_icon_information"
                hunt:sv_title="@string/MAC"
                hunt:sv_v_divider="true"
                hunt:sv_v_image_show="false" />

            <com.cylan.jiafeigou.widget.SettingItemView0
                android:id="@+id/sv_setting_device_sys_version"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y72"
                android:layout_marginLeft="@dimen/y20"
                android:layout_marginRight="@dimen/y20"
                hunt:sv_image_src="@drawable/setting_icon_information"
                hunt:sv_title="@string/SYSTME_VERSION"
                hunt:sv_v_divider="true"
                hunt:sv_v_image_show="false" />

            <com.cylan.jiafeigou.widget.SettingItemView0
                android:id="@+id/sv_setting_device_version"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y72"
                android:layout_marginLeft="@dimen/y20"
                android:layout_marginRight="@dimen/y20"
                android:visibility="gone"
                hunt:sv_image_src="@drawable/setting_icon_information"
                hunt:sv_title="@string/SOFTWARE_VERSION"
                hunt:sv_v_divider="true"
                hunt:sv_v_image_show="false" />

            <com.cylan.jiafeigou.widget.SettingItemView0
                android:id="@+id/sv_setting_device_battery"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y72"
                android:layout_marginEnd="@dimen/y20"
                android:layout_marginStart="@dimen/y20"
                hunt:sv_image_src="@drawable/setting_icon_information"
                hunt:sv_title="@string/BATTERY_LEVEL"
                hunt:sv_v_divider="true"
                hunt:sv_v_image_show="false" />

            <com.cylan.jiafeigou.widget.SettingItemView0
                android:id="@+id/sv_setting_device_uptime"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y72"
                android:layout_marginEnd="@dimen/y20"
                android:layout_marginStart="@dimen/y20"
                hunt:sv_image_src="@drawable/setting_icon_information"
                hunt:sv_title="@string/STANBY"
                hunt:sv_v_divider="true"
                hunt:sv_v_image_show="false" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
