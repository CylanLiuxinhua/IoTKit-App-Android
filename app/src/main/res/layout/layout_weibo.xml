<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f4f4f4"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingTop="@dimen/y20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y121"
        android:background="@color/color_white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/setting_weibo_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="start|top"
            android:hint="@string/LIVE_DETAIL_DEFAULT_CONTENT"
            android:maxEms="110"
            android:paddingEnd="@dimen/y15"
            android:paddingStart="@dimen/y15"
            android:paddingTop="@dimen/y15"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/setting_weibo_description_remain_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:paddingBottom="@dimen/y5"
            android:paddingEnd="@dimen/y5"
            android:text="110"
            android:textColor="@color/color_adadad"
            android:textSize="@dimen/sp13" />

    </LinearLayout>


    <com.cylan.jiafeigou.widget.SettingItemView0
        android:id="@+id/setting_weibo_account_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:background="@color/color_white"
        app:sv_sub_title="Jane"
        app:sv_title="@string/LIVE_PLATFORM_WEIBO"
        app:sv_v_divider="false" />

</LinearLayout>