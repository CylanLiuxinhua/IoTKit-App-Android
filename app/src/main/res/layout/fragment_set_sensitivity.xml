<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".n.view.cam.SetSensitivityDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x16"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x8"
            android:text="@string/SECURE_SENSITIVITY"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp16" />

        <RadioGroup
            android:id="@+id/rg_sensitivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y12">

            <RadioButton
                android:id="@+id/rbtn_sensitivity_high"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y54"
                android:text="@string/SENSITIVI_HIGHT"
                android:textColor="@color/color_black"
                android:textSize="@dimen/sp14" />

            <RadioButton
                android:id="@+id/rbtn_sensitivity_middle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y54"
                android:text="@string/SENSITIVI_STANDARD"
                android:textColor="@color/color_black"
                android:textSize="@dimen/sp14" />

            <RadioButton
                android:id="@+id/rbtn_sensitivity_low"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y54"
                android:text="@string/SENSITIVI_LOW"
                android:textColor="@color/color_black"
                android:textSize="@dimen/sp14" />
        </RadioGroup>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y48"
            android:gravity="end|center_vertical"
            android:text="取消"
            android:textColor="@color/color_4b9fd5"
            android:textSize="@dimen/sp14" />
    </LinearLayout>
</android.support.v7.widget.CardView>
