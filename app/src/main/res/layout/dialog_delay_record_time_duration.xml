<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/x280"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x24"
            android:paddingTop="@dimen/y24"
            android:text="循环播放"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <com.cylan.jiafeigou.widget.pick.WheelPicker
            android:id="@+id/dialog_record_duration_picker"
            android:layout_width="@dimen/x232"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:wheel_atmospheric="true"
            app:wheel_indicator="true"
            app:wheel_indicator_color="#4B9FD5"
            app:wheel_indicator_size="@dimen/x1"
            app:wheel_item_space="@dimen/x43"
            app:wheel_item_text_color="#999999"
            app:wheel_item_text_size="16sp"
            app:wheel_selected_item_text_color="#4B9FD5"
            app:wheel_selected_item_text_size="20dp"
            app:wheel_visible_item_count="3"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_record_duration_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/y27"
                android:paddingLeft="@dimen/x32"
                android:paddingRight="@dimen/x16"
                android:paddingTop="@dimen/y20"
                android:text="取消"
                android:textColor="#4B9FD5"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/dialog_record_duration_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/y27"
                android:paddingLeft="@dimen/x16"
                android:paddingRight="@dimen/x32"
                android:paddingTop="@dimen/y20"
                android:text="确定"
                android:textColor="#4B9FD5"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>