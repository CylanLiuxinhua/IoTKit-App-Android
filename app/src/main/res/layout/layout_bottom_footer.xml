<?xml version="1.0" encoding="utf-8"?>
<layout>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/y48">

        <com.cylan.jiafeigou.widget.SimpleProgressBar
            android:id="@+id/footer_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/y10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/footer_content_text"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:progress_point_radius="@dimen/x3"
            app:progress_radius="@dimen/x10"
            app:progress_stroke_color="@color/color_cecece" />

        <TextView
            android:id="@+id/footer_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/LOADING"
            android:textColor="@color/color_cecece"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/footer_progress_bar"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>