<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_mag_information_name"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="26dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备名称"
        android:textSize="16sp"
        android:textColor="#000" />

    <EditText
        android:text="客厅摄像头"
        android:textColor="#666"
        android:id="@+id/et_mag_information_edit_name"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="52dp"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:maxLength="12" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/tv_mag_information_show_state"
        android:layout_marginTop="37dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名称已存在"
        android:textSize="10sp"
        android:textColor="#F26B6B"
        android:layout_alignTop="@+id/et_input_box"
        android:layout_alignLeft="@+id/tv_information_name"
        android:layout_alignStart="@+id/tv_information_name" />

    <LinearLayout
        android:layout_marginLeft="141dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="113dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_mag_information_ensure"
            android:layout_width="58dp"
            android:layout_height="36dp"
            android:text="确认"
            android:textSize="14sp"
            android:textColor="#4B9FD5"
            android:background="#C5E6FC" />

        <Button
            android:id="@+id/btn_mag_information_cancel"
            android:layout_width="58dp"
            android:layout_height="36dp"
            android:text="取消"
            android:textSize="14sp"
            android:textColor="#4B9FD5"
            android:background="#C5E6FC" />
    </LinearLayout>

</RelativeLayout>