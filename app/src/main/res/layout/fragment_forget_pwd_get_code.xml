<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_get_code"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fLayout_forget_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lLayout_register_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y44"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y48"
                android:layout_marginTop="@dimen/y30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_forget_username"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/y5"
                        android:layout_marginTop="@dimen/y5"
                        android:layout_weight="1"
                        android:background="@null"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:hint="@string/PHONE_EMAIL"
                        android:inputType="textVisiblePassword"
                        android:maxLength="65"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:singleLine="true"
                        android:textColor="@color/color_666666"
                        android:textColorHint="@color/color_cecece"
                        android:textCursorDrawable="@drawable/bg_common_cursor"
                        android:textSize="@dimen/sp15" />

                    <ImageView
                        android:id="@+id/iv_forget_clear_username"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:src="@drawable/icon_clear_text"
                        android:visibility="gone" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_f2f2f2" />
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/fLayout_verification_code_input_box"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y48"
                android:layout_marginTop="@dimen/y30"
                android:visibility="gone">


                <EditText
                    android:id="@+id/et_verification_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/y5"
                    android:layout_marginTop="@dimen/y5"
                    android:background="@null"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:hint="@string/ENTER_CODE"
                    android:inputType="numberDecimal"
                    android:maxLength="6"
                    android:paddingLeft="@dimen/x40"
                    android:paddingRight="@dimen/x40"
                    android:textColor="@color/color_666666"
                    android:textColorHint="@color/color_cecece"
                    android:textCursorDrawable="@drawable/bg_common_cursor"
                    android:textSize="@dimen/sp15" />


                <TextView
                    android:id="@+id/tv_meter_get_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:enabled="false"
                    android:gravity="center"
                    android:paddingLeft="@dimen/x10"
                    android:paddingRight="@dimen/x10"
                    android:textColor="@color/common_btn_color_state" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y1"
                    android:layout_gravity="bottom"
                    android:background="@color/color_f2f2f2" />
            </FrameLayout>


            <TextView
                android:id="@+id/tv_forget_pwd_submit"
                style="@style/login_model_commit_style"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y37"
                android:text="@string/CARRY_ON" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
