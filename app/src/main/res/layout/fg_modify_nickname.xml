<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_editscenc"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rLayoutTitleBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/title_background"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/title_cover"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#000000" />

        <ImageView
            android:id="@+id/ico_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/back_padding"
            android:paddingRight="@dimen/back_maginright"
            android:scaleType="center"
            android:src="@drawable/btn_return_selector" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/USER_HELP"
            android:textColor="@color/status_text"
            android:textSize="@dimen/title_textsize" />

        <TextView
            android:id="@+id/right_btn"
            style="@style/comment_titlebar_text_style"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/right_paddingright"
            android:text="@string/SIGN_UP"
            android:textColor="@color/right_btn_color"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_edit_maginr"
        android:layout_marginTop="20dp"
        android:text="@string/RECEIVE_SMS"
        android:textColor="@color/code_text_color"
        android:textSize="@dimen/login_forget_size"
        android:visibility="gone"
         />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/setting_line_color" />

    <com.cylan.jiafeigou.widget.EditDelText
        android:id="@+id/nickname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_setting_item_default"
        android:hint="@string/USER_NAME"
        android:paddingLeft="@dimen/login_edit_magin"
        android:paddingRight="@dimen/modify_nickname"
        android:singleLine="true"
        android:textSize="@dimen/area_code_size" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/setting_line_color" />

</LinearLayout>