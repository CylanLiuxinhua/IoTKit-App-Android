<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="今天"
        android:textColor="#909090"
        android:textSize="14sp" />

    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:background="@color/setting_line_color" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.cylan.jiafeigou.widget.CircleImageView
            android:id="@+id/headpic"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:background="@drawable/doorbell_defaultpic"
            circle:border_color="@android:color/transparent"
            circle:border_width="0dp" />


        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/headpic"
            android:gravity="center_vertical"
            android:text="08:00"
            android:textColor="#333333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/headpic"
            android:text="呼出，接近10分钟"
            android:textColor="#6a6a6a"
            android:textSize="14sp" />


    </RelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:background="@color/setting_line_color" />

</LinearLayout>