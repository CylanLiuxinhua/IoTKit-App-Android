<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hunt="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:clickable="true"
    android:orientation="vertical">

    <com.cylan.jiafeigou.widget.CustomToolbar
        hunt:ct_enable_theme="true"
        android:id="@+id/custom_toolbar"
        layout="@layout/layout_default_custom_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        hunt:ct_background_color="@color/color_0ba8cf"
        hunt:ct_enable_shadow="false"
        hunt:ct_fit_system_window="true"
        hunt:ct_icon="@drawable/nav_icon_back_white"
        hunt:ct_icon_right="@drawable/icon_finish_disable"
        hunt:ct_left_title="@string/CHANGE_PWD"
        hunt:ct_left_title_color="@color/color_white" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y54"
                android:layout_marginTop="@dimen/y8">

                <EditText
                    android:id="@+id/et_mine_personal_information_old_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:background="@null"
                    android:hint="@string/Tap3_ChangePassword"
                    android:inputType="textPassword"
                    android:maxLength="12"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp16" />

                <View
                    android:id="@+id/view_mine_personal_information_old_password_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y1"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/y8"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:background="@color/color_f2f2f2" />

                <ImageView
                    android:id="@+id/iv_mine_personal_information_old_password_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x20"
                    android:src="@drawable/icon_clear_text"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y54"
                android:layout_marginTop="@dimen/y8">

                <EditText
                    android:id="@+id/et_mine_personal_information_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:background="@null"
                    android:hint="@string/NEW_PWD"
                    android:inputType="textPassword"
                    android:maxLength="12"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp16" />

                <View
                    android:id="@+id/view_mine_personal_information_new_password_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y1"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/y8"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:background="@color/color_f2f2f2" />

                <ImageView
                    android:id="@+id/iv_mine_personal_information_new_password_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x20"
                    android:src="@drawable/icon_clear_text"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y10"
            android:background="@drawable/little_shape" />
    </FrameLayout>

</LinearLayout>