<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/delay_record_bg"
                android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/act_delay_record_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/act_delay_record_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="SourceHanSansCN"
            android:text="延时摄影"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>
    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/act_delay_record_video_container"
        android:layout_width="302dp"
        android:layout_height="230dp"
        android:layout_below="@+id/act_delay_record_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        app:cardBackgroundColor="#FFF"
        app:cardCornerRadius="20px">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="198dp">

            <com.cylan.jiafeigou.widget.roundview.RoundedTextureView
                android:id="@+id/act_delay_record_video_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <View
                android:id="@+id/act_delay_record_video_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.6"
                android:background="#000000"/>


            <TextView
                android:id="@+id/act_delay_record_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/act_delay_record_play_drawable"
                android:enabled="true"/>
        </FrameLayout>

        <TextView
            android:id="@+id/act_delay_record_information"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="间隔时间20S拍摄时长8小时"
            android:textColor="#888888"
            android:textSize="12sp"/>
    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_below="@+id/act_delay_record_video_container"
        android:layout_marginTop="75dp">

        <ImageView
            android:id="@+id/act_delay_record_time_interval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="52dp"
            android:src="@drawable/delay_icon_60time"/>

        <com.cylan.jiafeigou.widget.RecordControllerView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/act_delay_record_time_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="52dp"
            android:src="@drawable/delay_ico_photography"/>

    </RelativeLayout>
</RelativeLayout>