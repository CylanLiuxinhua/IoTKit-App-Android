<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hunt="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.cylan.jiafeigou.n.view.bind.SetDeviceAliasFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y81"
        android:text="@string/ADD_SUCC_1"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp26" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y15"
        android:text="@string/Tap1_AddDevice_SetName"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp16" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y48"
        android:layout_marginTop="@dimen/y54">


        <EditText
            android:id="@+id/et_input_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/y5"
            android:layout_marginTop="@dimen/y5"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:maxLength="60"
            android:paddingLeft="@dimen/x40"
            android:paddingRight="@dimen/x40"
            android:textColor="@color/color_666666"
            android:textColorHint="@color/color_cecece"
            android:textCursorDrawable="@drawable/bg_common_cursor"
            android:textSize="@dimen/sp15" />

        <ImageView
            android:id="@+id/iv_clear_alias"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:src="@drawable/btn_login_clear_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:background="@color/color_f2f2f2" />
    </FrameLayout>

    <com.cylan.jiafeigou.widget.LoginButton
        android:id="@+id/btn_bind_done"
        android:layout_width="@dimen/x173"
        android:layout_height="@dimen/y50"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y38"
        android:gravity="center"
        android:text="@string/FINISHED"
        android:textColor="@color/color_4b9fd5"
        android:textSize="@dimen/sp17"
        hunt:lb_stroke_color="@color/color_d8d8d8" />
</LinearLayout>
