<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fLayout_top_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y48"
    android:background="@color/color_white">

    <ImageView
        android:id="@+id/iv_top_bar_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start|center_vertical"
        android:paddingLeft="@dimen/x15"
        android:paddingRight="@dimen/x15"
        android:clickable="true"
        android:src="@drawable/nav_icon_close_gary" />

    <TextView
        android:id="@+id/tv_top_bar_center"
        style="@style/text_base_singleLine"
        android:layout_gravity="center"
        android:text="@string/LOGIN"
        android:textColor="@color/color_444444"
        android:textSize="@dimen/sp22" />

    <TextView
        android:id="@+id/tv_top_bar_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end|center_vertical"
        android:gravity="center"
        android:paddingLeft="@dimen/x15"
        android:paddingRight="@dimen/x15"
        android:text="@string/Tap0_register"
        android:textColor="@color/color_4b9fd5"
        android:textSize="@dimen/sp14"
        android:visibility="gone" />

</FrameLayout>