<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_white"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:background="@color/color_0ba8cf">

        <ImageView
            android:id="@+id/iv_mine_friends_share_devices_back"
            android:clickable="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/icon_nav_back_white" />

            <TextView
                android:layout_toRightOf="@id/iv_mine_friends_share_devices_back"
                android:id="@+id/tv_share_to"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享设备给多多"
                android:maxLength="14"
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingBottom="12dp"
                android:textSize="18sp"
                android:textColor="@color/color_white" />

            <ImageView
                android:id="@+id/iv_mine_friends_share_devices_ok"
                android:layout_marginBottom="2dp"
                android:padding="15dp"
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_finish_disable" />
        </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_choose_device_title"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="8dp"
                android:text="@string/Tap3_Friends_UserInfo_ShareDevice_Select"
                android:textSize="14sp"
                android:visibility="invisible"
                android:textColor="@color/color_4b9fd5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:layout_marginLeft="15dp"
                android:id="@+id/rcy_share_device_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_no_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="142dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_no_devices" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/Tap3_Friends_UserInfo_ShareDevice_Fail"
                android:textColor="#aaaaaa"
                android:textSize="15sp" />
        </LinearLayout>

    </FrameLayout>
</LinearLayout>