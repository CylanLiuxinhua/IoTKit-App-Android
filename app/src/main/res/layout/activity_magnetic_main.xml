<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f2f5">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.cylan.jiafeigou.widget.PullToZoomListView
            android:id="@+id/magnetic_list_info"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#f0f2f5"
            android:divider="@null"
            android:listSelector="@color/transparent"
            android:scrollbars="none"/>

        <TextView
            android:id="@+id/magnetic_no_contacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:drawablePadding="10dp"
            android:text="@string/GLOBAL_NO_CONTENTS"
            android:textColor="#333"
            android:textSize="20sp"
            android:drawableTop="@drawable/bg_magnetic_no_contact"
            android:visibility="gone"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/magnetic_title_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/magnetic_title_background"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/magnetic_title_cover"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone"
            android:background="#000000" />

        <ImageView
            android:id="@+id/magnetic_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scaleType="center"
            android:src="@drawable/btn_doorbell_back_selector" />

        <TextView
            android:id="@+id/magnetic_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/DOOR_BELL"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/magnetic_progress"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:scaleType="center"
            android:src="@drawable/ico_doorbell_loading"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/magnetic_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scaleType="center"
            android:src="@drawable/btn_doorbell_setting_selector" />

        <ImageView
            android:id="@+id/magnetic_set_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:src="@drawable/ico_msg_remind"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</RelativeLayout>