<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_editscenc"
    android:clickable="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/code_magin"
            android:background="@drawable/bg_config"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/modifyname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_setting_item_selector">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/setting_line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/setting_text"
                        android:drawableLeft="@drawable/ico_modify_device_name"
                        android:text="@string/EQUIPMENT_NAME" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        style="@style/setting_text_value"
                        android:drawablePadding="@dimen/login_edit_magin"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/setting_icon_arrow"
                        android:visibility="visible" />

                </LinearLayout>

                <View
                    style="@style/setting_divider"
                    android:layout_marginLeft="55dp" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/position"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_setting_item_selector">

                <TextView
                    style="@style/setting_text"
                    android:layout_width="wrap_content"
                    android:drawableLeft="@drawable/ico_video_scene"
                    android:text="@string/LOCATION_SETTING" />

                <TextView
                    android:id="@+id/positionname"
                    style="@style/setting_text_value"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/login_edit_magin"
                    android:drawableRight="@drawable/setting_icon_arrow"
                    android:gravity="right"
                    android:visibility="visible" />


            </LinearLayout>

            <View
                style="@style/setting_divider"
                android:layout_marginLeft="55dp" />

            <LinearLayout
                android:id="@+id/devicemsg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_setting_item_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_text"
                    android:layout_width="wrap_content"
                    android:drawableLeft="@drawable/ico_device_set"
                    android:text="@string/EQUIPMENT_INFO" />

                <TextView
                    android:id="@+id/vision"
                    style="@style/setting_text_value"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/login_edit_magin"
                    android:drawableRight="@drawable/setting_icon_arrow"
                    android:gravity="right"
                    android:singleLine="true"
                    android:visibility="visible" />

            </LinearLayout>

            <View
                style="@style/setting_divider"
                android:layout_marginLeft="55dp" />

            <RelativeLayout
                android:id="@+id/wifipeizhi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_setting_item_selector">

                <TextView
                    style="@style/setting_text"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/ico_video_wifi"
                    android:drawableRight="@drawable/setting_icon_arrow"
                    android:text="@string/WIFI" />

                <TextView
                    android:id="@+id/wifiname"
                    style="@style/setting_text_value"
                    android:drawablePadding="@dimen/login_edit_magin"
                    android:drawableRight="@drawable/setting_icon_arrow"
                    android:visibility="visible" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="55dp"
                android:background="@color/setting_line_color" />

            <LinearLayout
                android:id="@+id/layout_mobile_data"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_setting_item_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/setting_text"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ico_device_internet"
                    android:text="@string/MOBILE_DATA"
                    android:textSize="@dimen/area_code_size" />

                <ToggleButton
                    android:id="@+id/toggle_mobile_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/login_edit_magin"
                    android:background="@drawable/checkbox_btn"
                    android:checked="false"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_mobile_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:text="@string/MOBILE_TIPS"
            android:textColor="#6d6d72"
            android:textSize="15sp"
            android:visibility="gone" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/code_magin"
            android:background="@color/setting_line_color" />

        <LinearLayout
            android:id="@+id/layout_automatic_video"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_setting_item_selector"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/automatic_video_text"
                style="@style/setting_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ico_automatic_video"
                android:paddingRight="0dp"
                android:singleLine="true"
                android:text="@string/SETTING_RECORD" />

            <ImageView
                android:id="@+id/automatic_video_remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ico_msg_remind"
                android:visibility="gone" />

            <TextView
                android:id="@+id/video_automatic_video"
                style="@style/setting_text_value"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:drawablePadding="@dimen/login_edit_magin"
                android:drawableRight="@drawable/setting_icon_arrow"
                android:gravity="right"
                android:singleLine="true"
                android:visibility="visible" />


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/layout_sdcard"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_setting_item_selector">

            <View
                style="@style/setting_divider"
                android:layout_alignParentBottom="false"
                android:layout_marginLeft="55dp" />

            <TextView
                style="@style/setting_text"
                android:drawableLeft="@drawable/ico_sd"
                android:text="@string/SETTING_SD" />

            <ProgressBar
                android:id="@+id/init_sdcard_loading"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:indeterminateBehavior="repeat"
                android:indeterminateDrawable="@anim/listview_loading"
                android:visibility="gone" />

            <TextView
                android:id="@+id/video_sdcard"
                style="@style/setting_text_value"
                android:layout_marginRight="15dp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/sdcard_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/setting_icon_arrow" />


        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/setting_line_color" />

        <TextView
            android:id="@+id/video_sd_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:text="@string/SD_INFO"
            android:textColor="#6d6d72"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/layout_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/code_magin"
            android:background="@drawable/bg_config"
            android:orientation="vertical">


            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/setting_line_color" />

            <LinearLayout
                android:id="@+id/layout_direction"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_setting_item_selector"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    style="@style/setting_text"
                    android:layout_width="wrap_content"
                    android:drawableLeft="@drawable/ico_video_direction"
                    android:text="@string/SETTING_DIRECTION" />

                <TextView
                    android:id="@+id/video_direction"
                    style="@style/setting_text_value"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/login_edit_magin"
                    android:drawableRight="@drawable/setting_icon_arrow"
                    android:gravity="right"
                    android:singleLine="true"
                    android:visibility="visible" />
            </LinearLayout>

            <View
                style="@style/setting_divider"
                android:layout_marginLeft="55dp" />

            <LinearLayout
                android:id="@+id/timezone_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_setting_item_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    style="@style/setting_text"
                    android:layout_width="wrap_content"
                    android:drawableLeft="@drawable/ico_timezone"
                    android:text="@string/SETTING_TIMEZONE" />

                <TextView
                    android:id="@+id/timezone"
                    style="@style/setting_text_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/login_edit_magin"
                    android:drawableRight="@drawable/setting_icon_arrow"
                    android:gravity="right"
                    android:singleLine="true"
                    android:visibility="visible" />
            </LinearLayout>

            <View
                style="@style/setting_divider"
                android:layout_marginLeft="55dp" />

            <LinearLayout
                android:id="@+id/layout_led"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_setting_item_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_text"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ico_video_light"
                    android:text="@string/LED"
                    android:textSize="@dimen/area_code_size" />

                <ToggleButton
                    android:id="@+id/toggle_led"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/login_edit_magin"
                    android:background="@drawable/checkbox_btn"
                    android:checked="true"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <View
                style="@style/setting_divider"
                android:layout_marginLeft="55dp" />


            <LinearLayout
                android:id="@+id/layout_hz"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_setting_item_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_text"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ico_device_ac"
                    android:text="@string/HZ_VOTE"
                    android:textSize="@dimen/area_code_size" />

                <ToggleButton
                    android:id="@+id/toggle_hz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/login_edit_magin"
                    android:background="@drawable/checkbox_btn"
                    android:checked="false"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/setting_line_color" />

        <TextView
            android:id="@+id/tv_hz_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:text="@string/FOOT_TIP_VOTE"
            android:textColor="#6d6d72"
            android:textSize="15sp" />


        <Button
            android:id="@+id/delete_device"
            style="@style/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/code_magin"
            android:layout_marginLeft="@dimen/login_edit_maginr"
            android:layout_marginRight="@dimen/login_edit_maginr"
            android:layout_marginTop="@dimen/code_magin"
            android:background="@drawable/btn_deldevice_selector"
            android:text="@string/DELETE_CID"
            android:textColor="@color/delete_device_color"
            android:visibility="visible" />
    </LinearLayout>

</ScrollView>
