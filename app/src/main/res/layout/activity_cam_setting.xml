<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hunt="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    tools:context="com.cylan.jiafeigou.n.view.activity.CamSettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fLayout_top_bar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_0ba8cf">

            <TextView
                android:id="@+id/imgV_top_bar_center"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:drawableLeft="@drawable/icon_nav_back_white"
                android:drawablePadding="15dp"
                android:padding="15dp"
                android:text="@string/SETTINGS_1"
                android:textColor="@color/color_white"
                android:textSize="16sp" />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/lLayout_setting_item_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/SETTINGS"
                    android:textColor="@color/color_4b9fd5"
                    android:textSize="15sp" />

                <com.cylan.jiafeigou.widget.SettingItemView0
                    android:id="@+id/sv_setting_device_detail"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    hunt:sv_image_src="@drawable/icon_setting_information"
                    hunt:sv_sub_title="@string/EQUIPMENT_INFO"
                    hunt:sv_title="@string/EQUIPMENT_INFO"
                    hunt:sv_v_divider="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/NETWORK"
                    android:textColor="@color/color_4b9fd5"
                    android:textSize="15sp" />

                <com.cylan.jiafeigou.widget.SettingItemView0
                    android:id="@+id/sv_setting_device_wifi"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    hunt:sv_image_src="@drawable/icon_setting_wifi"
                    hunt:sv_sub_title="cylan608"
                    hunt:sv_title="@string/WIFI"
                    hunt:sv_v_divider="true" />

                <com.cylan.jiafeigou.widget.SettingItemView1
                    android:id="@+id/sv_setting_device_mobile_network"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    hunt:sv_image_src="@drawable/icon_setting_3g"
                    hunt:sv_title="@string/MOBILE_DATA"
                    hunt:sv_v_divider="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/SETTINGS_1"
                    android:textColor="@color/color_4b9fd5"
                    android:textSize="15sp" />

                <com.cylan.jiafeigou.widget.SettingItemView0
                    android:id="@+id/sv_setting_safe_protection"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    hunt:sv_image_src="@drawable/icon_setting_safe"
                    hunt:sv_title="@string/SECURE"
                    hunt:sv_v_divider="true" />


                <com.cylan.jiafeigou.widget.SettingItemView0
                    android:id="@+id/sv_setting_device_auto_record"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    hunt:sv_image_src="@drawable/icon_setting_videotape"
                    hunt:sv_title="@string/SETTING_RECORD"
                    hunt:sv_v_divider="true" />


                <com.cylan.jiafeigou.widget.SettingItemView0
                    android:id="@+id/sv_setting_device_delay_capture"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    hunt:sv_image_src="@drawable/icon_setting_filming"
                    hunt:sv_sub_title="@string/Tap1_CameraFun_Timelapse_NotStart"
                    hunt:sv_title="@string/Tap2_Timelapse_title"
                    hunt:sv_v_divider="true" />


                <com.cylan.jiafeigou.widget.SettingItemView1
                    android:id="@+id/sv_setting_device_standby_mode"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    hunt:sv_image_src="@drawable/icon_setting_standby"
                    hunt:sv_sub_title="000d0d0d"
                    hunt:sv_title="@string/Tap1_CameraFun_Standby"
                    hunt:sv_v_divider="true" />


                <com.cylan.jiafeigou.widget.SettingItemView1
                    android:id="@+id/sv_setting_device_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    hunt:sv_image_src="@drawable/icon_setting_3g"
                    hunt:sv_title="@string/LED"
                    hunt:sv_v_divider="true" />


                <com.cylan.jiafeigou.widget.SettingItemView1
                    android:id="@+id/sv_setting_device_rotatable"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    hunt:sv_image_src="@drawable/icon_setting_rotate_pic"
                    hunt:sv_title="@string/Tap1_CameraFun_VideoDirection"
                    hunt:sv_v_divider="true" />

                <com.cylan.jiafeigou.widget.SettingItemView0
                    android:id="@+id/sbtn_setting_110v"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    hunt:sv_image_src="@drawable/icon_setting_electricity"
                    hunt:sv_sub_title="@string/FOOT_TIP_VOTE"
                    hunt:sv_title="@string/HZ_VOTE"
                    hunt:sv_v_divider="true"
                    hunt:sv_visibility="true" />


                <TextView
                    android:id="@+id/tv_setting_unbind"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="50dp"
                    android:background="@color/color_f2f2f2"
                    android:gravity="center"
                    android:text="@string/DELETE_CID"
                    android:textColor="@color/color_FF3D32"
                    android:textSize="16sp" />
            </LinearLayout>
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/little_shape" />

    </FrameLayout>

</LinearLayout>
