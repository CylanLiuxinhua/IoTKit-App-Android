<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/door_lock_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/y24"
            android:layout_marginStart="@dimen/y24"
            android:layout_marginTop="@dimen/y24"
            android:text="@string/DOOR_PASSWORD"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edit_door_pass_word"
            android:layout_width="0dp"
            android:layout_height="@dimen/y48"
            android:layout_marginEnd="@dimen/y24"
            android:layout_marginStart="@dimen/y24"
            android:layout_marginTop="@dimen/y13"
            android:inputType="textPassword"
            android:maxLength="16"
            android:maxLines="1"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/door_lock_title" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y36"
            android:layout_marginBottom="@dimen/y8"
            android:layout_marginEnd="@dimen/y8"
            android:layout_marginTop="@dimen/y25"
            android:gravity="center"
            android:paddingEnd="@dimen/y22"
            android:paddingStart="@dimen/y22"
            android:text="@string/CANCEL"
            android:textColor="@color/color_4b9fd5"
            android:textSize="@dimen/sp14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ok"
            app:layout_constraintTop_toBottomOf="@+id/edit_door_pass_word" />

        <TextView
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y36"
            android:layout_marginBottom="@dimen/y8"
            android:layout_marginEnd="@dimen/y8"
            android:layout_marginTop="@dimen/y25"
            android:enabled="false"
            android:gravity="center"
            android:paddingEnd="@dimen/y22"
            android:paddingStart="@dimen/y22"
            android:text="@string/OK"
            android:textColor="@color/color_4b9fd5_selector"
            android:textSize="@dimen/sp14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_door_pass_word" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>