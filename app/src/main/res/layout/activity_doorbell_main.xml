<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <com.cylan.jiafeigou.widget.PullToZoomListView
            android:id="@+id/doordell_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:divider="@null"
            android:listSelector="@color/transparent"
            android:scrollbars="none" />

        <TextView
            android:id="@+id/nocalllog"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/DOOR_CALL_RECORD"
            android:textColor="@color/doorbell_no_calllog"
            android:textSize="17sp"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rLayoutTitleBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/doorbell_navbar"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/ico_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scaleType="center"
            android:src="@drawable/btn_doorbell_back_selector" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="middle"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:text="@string/DOOR_BELL"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/progress"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:scaleType="center"
            android:src="@drawable/ico_doorbell_loading"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ico_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scaleType="center"
            android:src="@drawable/btn_doorbell_setting_selector" />

        <ImageView
            android:id="@+id/ico_set_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:src="@drawable/ico_msg_remind"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</RelativeLayout>