<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_home_mine_relativesandfriends_scan_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_home_mine_friends_add_from_contact_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/x15"
            android:clickable="true"
            android:src="@drawable/nav_tab_back_selector" />

        <EditText
            android:id="@+id/et_add_phone_number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y48"
            android:layout_marginLeft="@dimen/x48"
            android:textCursorDrawable="@drawable/search_friend_cursor_color"
            android:maxLines="1"
            android:inputType="text"
            android:hint="@string/Search"
            android:textColorHint="#60ffffff"
            android:background="@null"
            android:textSize="@dimen/sp18" />
    </RelativeLayout>

</FrameLayout>
