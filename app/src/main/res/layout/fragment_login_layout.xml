<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rLayout_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:clickable="true">


    <LinearLayout
        android:id="@+id/lLayout_login_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="44dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/et_login_username"
                style="@style/login_model_common_edittext_style"
                android:layout_centerInParent="true"
                android:hint="请输入手机号/邮箱" />

            <ImageView
                android:id="@+id/iv_login_clear_username"
                style="@style/clear_edittext_style"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_f2f2f2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="29dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_login_pwd"
                style="@style/login_model_common_edittext_style"
                android:layout_centerInParent="true"
                android:hint="请输入密码"
                android:inputType="textPassword" />

            <ImageView
                android:id="@+id/iv_login_clear_pwd"
                style="@style/clear_edittext_style"
                android:layout_centerVertical="true"
                android:layout_marginRight="9dp"
                android:layout_toLeftOf="@+id/cb_show_pwd" />

            <CheckBox
                android:id="@+id/cb_show_pwd"
                style="@style/show_pwd_style"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_f2f2f2" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="37dp">

            <TextView
                android:id="@+id/tv_model_commit"
                style="@style/login_model_commit_style"
                android:layout_gravity="center_horizontal"
                android:text="登录" />

            <ProgressBar
                android:id="@+id/pb_login_loading"
                style="@style/progress_circle_login_style"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone" />
        </FrameLayout>


        <TextView
            android:id="@+id/tv_login_forget_pwd"
            style="@style/text_base_singleLine"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="忘记密码？"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rLayout_login_third_party"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="34dp">

        <View
            android:id="@+id/view_third_party_center"
            android:layout_width="1dp"
            android:layout_height="13dp"
            android:layout_centerInParent="true"
            android:background="@color/color_9e9e9e" />

        <TextView
            android:id="@+id/tv_qqLogin_commit"
            style="@style/third_party_login_style"
            android:layout_marginRight="24dp"
            android:layout_toLeftOf="@+id/view_third_party_center"
            android:drawableLeft="@drawable/icon_login_qq"
            android:text="QQ登录" />

        <TextView
            android:id="@+id/tv_xlLogin_commit"
            style="@style/third_party_login_style"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/view_third_party_center"
            android:drawableLeft="@drawable/icon_login_weibo"
            android:text="微博登录" />
    </RelativeLayout>


</RelativeLayout>