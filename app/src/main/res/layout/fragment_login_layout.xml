<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rLayout_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:clickable="true">

    <include
        android:id="@+id/rLayout_login_top"
        layout="@layout/layout_login_top_item"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="33dp" />

    <LinearLayout
        android:id="@+id/lLayout_login_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rLayout_login_top"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="44dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/et_login_username"
                style="@style/login_common_cursor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:hint="请输入手机号/邮箱"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />

            <ImageView
                android:id="@+id/iv_login_clear_username"
                style="@style/clear_edittext_style"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_f2f2f2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="29dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_login_pwd"
                style="@style/login_common_cursor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingRight="10dp" />

            <ImageView
                android:id="@+id/iv_login_clear_pwd"
                style="@style/clear_edittext_style"
                android:layout_centerVertical="true"
                android:layout_marginRight="9dp"
                android:layout_toLeftOf="@+id/togbtn_show_pwd" />


            <ToggleButton
                android:id="@+id/togbtn_show_pwd"
                style="@style/show_pwd_style"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_f2f2f2" />

        <Button
            android:id="@+id/btn_login_commit"
            style="@style/login_model_commit_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="37dp"
            android:text="登录" />

        <TextView
            android:id="@+id/tv_login_forget_pwd"
            style="@style/text_base_singleLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="忘记密码？"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rLayout_login_third_party"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="34dp">

        <View
            android:id="@+id/view_third_party_center"
            android:layout_width="1dp"
            android:layout_height="13dp"
            android:layout_centerInParent="true"
            android:background="@color/color_9e9e9e" />

        <TextView
            style="@style/third_party_login_style"
            android:layout_marginRight="24dp"
            android:layout_toLeftOf="@+id/view_third_party_center"
            android:drawableLeft="@drawable/icon_login_qq"
            android:text="QQ登录" />

        <TextView
            style="@style/third_party_login_style"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/view_third_party_center"
            android:drawableLeft="@drawable/icon_login_weibo"
            android:text="微博登录" />
    </RelativeLayout>
</RelativeLayout>