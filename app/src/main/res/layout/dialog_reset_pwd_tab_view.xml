<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/y20"
    android:background="@color/color_white">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y48"
            android:layout_marginStart="@dimen/y25"
            android:layout_marginEnd="@dimen/y25"
            android:gravity="center"
            android:text="@string/PWD_CHANGED"
            android:textColor="@color/color_979797"
            android:textSize="@dimen/sp16" />

        <TextView
            android:layout_height="@dimen/y36"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/y16"
            android:id="@+id/tv_dialog_btn_left"
            android:layout_width="wrap_content"
            android:padding="@dimen/y10"
            android:text="@string/OK"
            android:textColor="@color/color_4b9fd5"
            android:textSize="@dimen/sp14"/>

</LinearLayout>
