<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/root"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_edit_maginr"
                android:layout_marginTop="@dimen/modify_bindphone"
                android:text="@string/GENERAL"
                android:textColor="@color/code_text_color"
                android:textSize="@dimen/login_forget_size" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/modify_bindphone"
                android:background="@drawable/bg_config">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_config_item_default"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/setting_text"
                        android:layout_weight="1"
                        android:text="@string/NAME"
                        android:textSize="@dimen/area_code_size" />

                    <TextView
                        android:id="@+id/device_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/modify_nickname"
                        android:scaleType="fitXY"
                        android:textColor="#8c8c8c"
                        android:textSize="@dimen/login_forget_size" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/login_edit_maginr"
                    android:background="@color/setting_line_color" />

                <LinearLayout
                    android:id="@+id/layout_device_type"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_config_item_default"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/setting_text"
                        android:layout_weight="1"
                        android:text="@string/MODEL"
                        android:textSize="@dimen/area_code_size" />

                    <TextView
                        android:id="@+id/device_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/modify_nickname"
                        android:scaleType="fitXY"
                        android:textColor="#8c8c8c"
                        android:textSize="@dimen/login_forget_size" />
                </LinearLayout>

                <View
                    android:id="@+id/device_type_line"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/login_edit_maginr"
                    android:background="@color/setting_line_color" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_config_item_default"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/setting_text"
                        android:layout_weight="1"
                        android:text="@string/SN"
                        android:textSize="@dimen/area_code_size" />

                    <TextView
                        android:id="@+id/device_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/modify_nickname"
                        android:scaleType="fitXY"
                        android:src="@drawable/ico_default_headpic"
                        android:textColor="#8c8c8c"
                        android:textSize="@dimen/login_forget_size" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/login_edit_maginr"
                    android:background="@color/setting_line_color" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_config_item_default"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/setting_text"
                        android:layout_weight="1"
                        android:text="@string/MAC"
                        android:textSize="@dimen/area_code_size" />

                    <TextView
                        android:id="@+id/device_mac_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/modify_nickname"
                        android:scaleType="fitXY"
                        android:src="@drawable/ico_default_headpic"
                        android:textColor="#8c8c8c"
                        android:textSize="@dimen/login_forget_size" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/login_edit_maginr"
                    android:background="@color/setting_line_color" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_config_item_default"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/setting_text"
                        android:layout_weight="1"
                        android:text="@string/SYSTME_VERSION"
                        android:textSize="@dimen/area_code_size" />

                    <TextView
                        android:id="@+id/device_system_vision"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/modify_nickname"
                        android:scaleType="fitXY"
                        android:src="@drawable/ico_default_headpic"
                        android:textColor="#8c8c8c"
                        android:textSize="@dimen/login_forget_size" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/login_edit_maginr"
                    android:background="@color/setting_line_color" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_config_item_default"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/setting_text"
                        android:layout_weight="1"
                        android:text="@string/SOFTWARE_VERSION"
                        android:textSize="@dimen/area_code_size" />

                    <TextView
                        android:id="@+id/device_software_vision"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/modify_nickname"
                        android:scaleType="fitXY"
                        android:src="@drawable/ico_default_headpic"
                        android:textColor="#8c8c8c"
                        android:textSize="@dimen/login_forget_size" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_edit_maginr"
                android:layout_marginTop="@dimen/modify_bindphone"
                android:text="@string/NETWORK"
                android:textColor="@color/code_text_color"
                android:textSize="@dimen/login_forget_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/modify_bindphone"
                android:background="@drawable/bg_config">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_config_item_default"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/setting_text"
                        android:layout_weight="1"
                        android:text="@string/device_Wi_Fi"
                        android:textSize="@dimen/area_code_size" />

                    <TextView
                        android:id="@+id/device_wifi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/modify_nickname"
                        android:scaleType="fitXY"
                        android:textColor="#8c8c8c"
                        android:textSize="@dimen/login_forget_size" />
                </LinearLayout>

                <View
                    android:id="@+id/line1"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/login_edit_maginr"
                    android:background="@color/setting_line_color" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_edit_maginr"
                android:layout_marginTop="@dimen/modify_bindphone"
                android:text="@string/USAGE"
                android:textColor="@color/code_text_color"
                android:textSize="@dimen/login_forget_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/modify_bindphone"
                android:background="@drawable/bg_config">

                <View
                    android:id="@+id/line2"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/login_edit_maginr"
                    android:background="@color/setting_line_color" />

                <LinearLayout
                    android:id="@+id/layout_device_dump"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_config_item_default"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/setting_text"
                        android:layout_weight="1"
                        android:text="@string/BATTERY_LEVEL"
                        android:textSize="@dimen/area_code_size" />

                    <TextView
                        android:id="@+id/device_dump"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/modify_nickname"
                        android:scaleType="fitXY"
                        android:textColor="#8c8c8c"
                        android:textSize="@dimen/login_forget_size" />
                </LinearLayout>

                <View
                    android:id="@+id/line3"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/login_edit_maginr"
                    android:background="@color/setting_line_color" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_config_item_default"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/setting_text"
                        android:layout_weight="1"
                        android:text="@string/STANBY"
                        android:textSize="@dimen/area_code_size" />

                    <TextView
                        android:id="@+id/device_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/modify_nickname"
                        android:scaleType="fitXY"
                        android:textColor="#8c8c8c"
                        android:textSize="@dimen/login_forget_size" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>