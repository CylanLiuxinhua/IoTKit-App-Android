<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_white"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/rl_tab_bar_container"
        android:background="@color/color_0ba8cf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_home_mine_share_devices_manager_back"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/x15"
                android:src="@drawable/nav_tab_back_selector" />

            <TextView
                android:id="@+id/tv_home_mine_share_devices_name"
                android:layout_toRightOf="@id/iv_home_mine_share_devices_manager_back"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y48"
                android:text="@string/EQUIPMENT_NAME"
                android:textSize="@dimen/sp18"
                android:textColor="@color/color_white" />
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:visibility="invisible"
                android:id="@+id/tv_has_share_title"
                android:layout_marginTop="@dimen/y19"
                android:layout_marginLeft="@dimen/x15"
                android:text="@string/Tap3_ShareDevice_Shared"
                android:textSize="@dimen/sp13"
                android:textColor="@color/color_4b9fd5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="@dimen/y8"
                android:id="@+id/recycler_had_share_relatives_and_friend"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="@dimen/y0">
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_no_share_friend"
            android:visibility="invisible"
            android:layout_marginTop="@dimen/y120"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/pic_no_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/y16"
                android:textColor="#aaaaaa"
                android:textSize="@dimen/sp15"
                android:text="@string/Tap3_ShareDevice_NoShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y10"
            android:background="@drawable/little_shape" />

    </FrameLayout>

</LinearLayout>