<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/chat_item_time"
        android:textColor="#ADADAD"
        android:textSize="13sp"
        android:layout_centerHorizontal="true"
        android:text="2016/04/01 12:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_mine_suggestion_client"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/y22"
        android:src="@drawable/img_head"
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/y40" />

    <TextView
        android:layout_toLeftOf="@id/iv_mine_suggestion_client"
        android:id="@+id/chat_item_msg"
        android:layout_marginRight="@dimen/x58"
        android:layout_alignParentRight="true"
        android:background="@drawable/pic_container_blue"
        android:textColor="#fff"
        android:textSize="14sp"
        android:paddingLeft="@dimen/x12"
        android:paddingBottom="@dimen/y10"
        android:paddingTop="@dimen/y10"
        android:text="希望你们会做视频下载功能，非常实用呢"
        android:layout_marginTop="@dimen/y30"
        android:layout_width="@dimen/x230"
        android:layout_height="wrap_content" />

</RelativeLayout>