<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/bg_land_bottom">

    <ImageView
        android:id="@+id/ico_land_play"
        style="@style/video_play_btn"
        android:layout_width="48dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="17dp"
        android:background="@drawable/bg_online_light"
        android:scaleType="center"
        android:src="@drawable/btn_pause" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/ico_land_shot"
            style="@style/video_play_btn"
            android:layout_width="59dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_online_light"
            android:scaleType="center"
            android:src="@drawable/btn_land_shot_selector" />


        <ImageView
            android:id="@+id/ico_land_voice"
            style="@style/video_play_btn"
            android:layout_width="59dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_online_light"
            android:scaleType="center"
            android:src="@drawable/btn_land_close_voice_selector" />

        <ImageView
            android:id="@+id/ico_land_mike"
            style="@style/video_play_btn"
            android:layout_width="59dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_online_light"
            android:scaleType="center"
            android:src="@drawable/btn_mike_close_selector" />


        <ImageView
            android:id="@+id/ico_land_fullscreen"
            style="@style/video_play_btn"
            android:layout_width="59dp"
            android:layout_height="48dp"
            android:layout_marginRight="2.5dp"
            android:background="@drawable/bg_online_light"
            android:scaleType="center"
            android:src="@drawable/btn_recover_small" />
    </LinearLayout>
</RelativeLayout>
