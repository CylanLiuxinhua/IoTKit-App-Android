<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/titlebar1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_titlebar"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/back_padding"
            android:paddingRight="@dimen/back_maginright"
            android:scaleType="center"
            android:src="@drawable/btn_return_selector" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/USER_HELP"
            android:textColor="@color/status_text"
            android:textSize="@dimen/title_textsize" />

        <TextView
            android:id="@+id/right_btn"
            style="@style/comment_titlebar_text_style"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/right_paddingright"
            android:text="@string/SIGN_UP"
            android:visibility="gone" />
    </RelativeLayout>

    <WebView
        android:id="@+id/webview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>