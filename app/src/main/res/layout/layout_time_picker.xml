<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/y24"
            android:layout_marginTop="@dimen/y20"
            android:text="@string/Tap1_CameraFun_Timelapse_StartTime"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp16" />

        <LinearLayout
            android:id="@+id/wheel_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y18"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/y30"
            android:paddingStart="@dimen/y30">


            <com.cylan.jiafeigou.widget.pick.WheelVerticalView
                android:id="@+id/time_picker_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:selectionDivider="@drawable/wheel_divider"
                app:selectionDividerHeight="@dimen/y1" />

            <com.cylan.jiafeigou.widget.pick.WheelVerticalView
                android:id="@+id/time_picker_month_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/y14"
                app:selectionDivider="@drawable/wheel_divider"
                app:selectionDividerHeight="@dimen/y1" />

            <com.cylan.jiafeigou.widget.pick.WheelVerticalView
                android:id="@+id/time_picker_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/y14"
                app:selectionDivider="@drawable/wheel_divider"
                app:selectionDividerHeight="@dimen/y1" />

            <com.cylan.jiafeigou.widget.pick.WheelVerticalView
                android:id="@+id/time_picker_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/y14"
                app:selectionDivider="@drawable/wheel_divider"
                app:selectionDividerHeight="@dimen/y1" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y8"
                android:layout_marginEnd="@dimen/y8"
                android:layout_marginTop="@dimen/y8"
                android:paddingBottom="@dimen/y12"
                android:paddingEnd="@dimen/y22"
                android:paddingStart="@dimen/y22"
                android:paddingTop="@dimen/y12"
                android:text="@string/CANCEL"
                android:textColor="@color/color_4b9fd5" />

            <TextView
                android:id="@+id/btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y8"
                android:layout_marginEnd="@dimen/y8"
                android:layout_marginTop="@dimen/y8"
                android:paddingBottom="@dimen/y12"
                android:paddingEnd="@dimen/y22"
                android:paddingStart="@dimen/y22"
                android:paddingTop="@dimen/y12"
                android:text="@string/OK"
                android:textColor="@color/color_4b9fd5" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>